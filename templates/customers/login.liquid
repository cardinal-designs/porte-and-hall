{{ 'customer-gate.css' | asset_url | stylesheet_tag }}

<div class="customer-gate login">
  <div class="page-width">

    <div class="customer-gate__recover-container" id="recover">
      <h1 class="customer-gate__title h2">Reset Password</h1>
      <p class="customer-gate__text">{{ 'customer.recover_password.subtext' | t }}</p>
      
      {% form 'recover_customer_password' %}
        {% assign recover_success = form.posted_successfully? %}
        <div class="field">
          <input type="email"
            class="field__input"
            value=""
            name="email"
            id="RecoverEmail"
            autocorrect="off"
            autocapitalize="off"
            autocomplete="email"
            {% if form.errors %}
              aria-invalid="true"
              aria-describedby="RecoverEmail-email-error"
              autofocus
            {% endif %}
            placeholder="Email"
          >
        </div>

        {% if form.errors %}
          <div class="form__message">{{ form.errors | default_errors }}</div>
        {% endif %}

        <button class="customer-gate__button button button--full">Submit</button>

        <a class="customer__alt-link" href="#login">Back to Login</a>
      {% endform %}
    </div>

    <div class="customer-gate__wrapper" id="login">
      <div class="customer-gate__container">

        <h1 class="customer-gate__title h2">Log In</h1>
        {% if recover_success == true %}
          <p class="form__message" autofocus color="#A8BC70">An email will be sent to you shortly to reset.</p>
        {% endif %}
        {% form 'customer_login', novalidate: 'novalidate' %}
         
          <div class="field">  
            <input
              type="email"
              class="field__input"
              name="customer[email]"
              id="CustomerEmail"
              autocomplete="email"
              autocorrect="off"
              autocapitalize="off"
              {% if form.errors contains 'form' %}
                aria-invalid="true"
              {% endif %}
              placeholder="{{ 'customer.login_page.email' | t }}"
            >
          </div>

          {% if form.password_needed %}
            <div class="field">         
              <input
                type="password"
                class="field__input"
                value=""
                name="customer[password]"
                id="CustomerPassword"
                autocomplete="current-password"
                {% if form.errors contains 'form' %}
                  aria-invalid="true"
                {% endif %}
                placeholder="{{ 'customer.login_page.password' | t }}"
              >
            </div>

            <a class="customer-gate__recover-link caption" href="#recover">
              Forgot Password?
            </a>
          {% endif %}

          {% if form.errors %}
            <div class="form__message">{{ form.errors | default_errors }}</div>
          {% endif %}

          <button class="customer-gate__button button button--full">
            Log In
          </button>

          <a class="customer__alt-link" href="{{ routes.account_register_url }}">Sign Up</a>
          
        {% endform %}
      </div>

    </div>
  </div>
</div>