{{ 'customer-gate.css' | asset_url | stylesheet_tag }}

<div class="customer-gate register">
  <div class="page-width">
    <div class="customer-gate__container">

      <h1 class="customer-gate__title h2">Sign Up</h1>

      {% form 'create_customer', novalidate: 'novalidate' %}

        <div class="field-row"> 
          <div class="field">  
            <input
              type="text"
              class="field__input"
              name="customer[first_name]"
              id="RegisterForm-FirstName"
              {% if form.first_name %}value="{{ form.first_name }}"{% endif %}
              autocomplete="given-name"
              placeholder="First Name"
            >
          </div>
          <div class="field">
            <input
              type="text"
              class="field__input"
              name="customer[last_name]"
              id="RegisterForm-LastName"
              {% if form.last_name %}value="{{ form.last_name }}"{% endif %}
              autocomplete="family-name"
              placeholder="Last Name"
            >
          </div>
        </div>
        <div class="field">   
          <input
            type="email"
            class="field__input"
            name="customer[email]"
            id="RegisterForm-email"
            {% if form.email %} value="{{ form.email }}"{% endif %}
            spellcheck="false"
            autocapitalize="off"
            autocomplete="email"
            aria-required="true"
            {% if form.errors contains 'email' %}
              aria-invalid="true"
              aria-describedby="RegisterForm-email-error"
            {% endif %}
            placeholder="Email*"
          >
        </div>
        <div class="field">     
          <input
            type="password"
            class="field__input"
            name="customer[password]"
            id="RegisterForm-password"
            aria-required="true"
            {% if form.errors contains 'password' %}
              aria-invalid="true"
              aria-describedby="RegisterForm-password-error"
            {% endif %}
            placeholder="Password*"
          >
        </div>

        {% if form.errors %}
          <div class="form__message">{{ form.errors | default_errors }}</div>
        {% endif %}

        <button class="customer-gate__button button button--full">Submit</button>

        <a class="customer__alt-link blue" href="{{ routes.account_login_url }}">Back to Login</a>
      {% endform %}
    </div>
  </div>
</div>