<!DOCTYPE html>
<html lang="{{ locale }}" dir="{{ direction }}" class="{{ checkout_html_classes }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, height=device-height, minimum-scale=1.0, user-scalable=0">
    <meta name="referrer" content="origin">

    <title>{{ page_title }}</title>

    {{ content_for_header }}

    {{ checkout_stylesheets }}
    {{ checkout_scripts }}
 <style>
    .breadcrumb a.breadcrumb__link, .breadcrumb__item span.breadcrumb__text{
      font-size: 14px;
      color: #30383D;
      letter-spacing: 0.2em;
      font-weight: bold;
    }
    
    /* .checkbox__input input#checkout_buyer_accepts_marketing, .checkbox__input input#checkout_remember_me {
      border-radius: 0;
      border: 1px solid #30383D;
    } */
    
    .main .field__input, .floating-labels .main .field__label{
        border-radius: 0;
      	font-size: 15px;
        color: #30383D;
    }
    .floating-labels .main .field__label {
        color: rgba(48,56,61,0.3);
    }

    h2#main-header {
      	font-size: 14px;
        letter-spacing: 0.2em;
        text-transform: uppercase;
        color: #30383D;
        font-weight: bold;
/*       	font-family: 'BrandonGrotesque-Bold'; */
    }
    .layout-flex p.layout-flex__item {
        color: #30383D;
        font-size: 14px;
    }
    label.checkbox__label {
        letter-spacing: 0.03em;
        color: #30383D;
        font-size: 15px;
    }
    .floating-labels .field--third {
        width: 50%;
    }
    .step__footer a.step__footer__previous-link svg {
      display: none;
    }
    .step__footer a.step__footer__previous-link span.step__footer__previous-link-content {
        font-size: 14px;
        line-height: 16.8px;
        color: #30383D;
    }
    .step__footer button#continue_button {
        background: #546B82;
        max-width: 265px;
        width: 100%;
        text-transform: uppercase;
        height: 40px;
        font-size: 12px;
    }
    .step__footer span.btn__content {
        top: -6px;
        letter-spacing: 0.2em;
        color: #ffffff;
    }
    .main .field__caret {
        border: none;
        background-image: url(https://cdn.shopify.com/s/files/1/0510/2488/7998/files/Vector.svg?v=1609495595);
        background-repeat: no-repeat;
        top: 50%;
        height: 10px;
        width: 17px;
        right: 15px;
    }
    .main .field__caret svg {
        display: none;
    }  
    .step__footer button#continue_button {
        border-radius: 0;
    }
    .Breadcrumb li.breadcrumb__item--current {
        border-bottom: 1px solid #D9D3C5;
    }
    .field--third ~ .field.field--required {
        width: 50%;
    }    
    .field__input-btn-wrapper input#checkout_reduction_code {
      border-radius: 0;
    }
    .field__input-btn-wrapper button.field__input-btn.btn.btn--disabled {
     	margin: 0;
        border-radius: 0;
        background-color: #546B82;
        max-width: 155px;
    	width: 100%;        
    }
    .sidebar__content .order-summary__section--product-list::after {
        background-image: url(https://cdn.shopify.com/s/files/1/0510/2488/7998/files/Vector_1_9ff3af88-8b65-4f94-8bdd-827a544bf122.png?v=1609482336);
       	background-color: unset;
    	height: 3px;
    }
    .order-summary__section.order-summary__section--total-lines {
        background-image: url(https://cdn.shopify.com/s/files/1/0510/2488/7998/files/Vector_1_9ff3af88-8b65-4f94-8bdd-827a544bf122.png?v=1609482336);
        background-repeat: no-repeat;
        border-top: 0;
    }
    .sidebar .total-line-table__tbody+.total-line-table__footer .total-line:first-child th::before, .sidebar .total-line-table__tbody+.total-line-table__footer .total-line:first-child td::before{
        background-image: url(https://cdn.shopify.com/s/files/1/0510/2488/7998/files/Vector_1_9ff3af88-8b65-4f94-8bdd-827a544bf122.png?v=1609482336);
        background-color: unset;
        height: 3px;
    }
    .product th.product__description {
      	text-transform: uppercase;
      	color: #30383D;
    }
    .product__price span {
        color: #333333 !important;
      	font-size: 15px;
    }
    .total-line-table tr.total-line.total-line--subtotal {
        font-size: 15px;
        color: #30383D !important;
    }
    .total-line-table__tbody span.order-summary__small-text, .total-line--shipping .total-line__name span {
        font-size: 15px;
        color: #30383D;
        opacity: 0.6;
    }
    .total-line-table tfoot.total-line-table__footer {
        font-size: 20px;
    }
    .total-line-table span.payment-due__currency {
        font-size: 20px;
        color: #30383D !important;
        opacity: 0.6;
    }
    .product-table .product__description__variant {
        color: #30383D;
        opacity: 0.4;
        font-size: 14px;
    }
    .product-table .product__image .product-thumbnail__wrapper {
        border-radius: 0;
    }
    .product-thumbnail__quantity {
    	display: none;
    }
    .order-summary__section__content .product-table caption.visually-hidden{
      overflow: visible;
      margin: 0;
      height: unset;
      width: unset;
      position: unset;
      text-align: left;
      font-size: 1.2857142857em;
      line-height: 1.3em;
      margin-bottom: 1rem;
      text-transform:uppercase;
      font-weight: bold;
    }
    nav[aria-label="Breadcrumb"] .breadcrumb li span,
    nav[aria-label="Breadcrumb"] .breadcrumb li a{
      text-transform:uppercase;
    }
    .main__header .logo .logo__image--small{
    	max-height: unset;
    }
    .main__header .logo{
    	margin-bottom: 54px;
    }
    .main__header {
        padding-bottom: 18px;
    }
    .breadcrumb .breadcrumb__chevron-icon{
     	margin: 0 20px;
    }
    .step__sections .section__header {
        margin-bottom: 18px;
    }
    .main .field__input{
    	border: 1px solid #EEEFEF;
      	letter-spacing: 0.03em;
    }
    .main .field__input::placeholder{
    	color: #30383D;
      	opacity: 0.3;
    }
    .field__input{
    	padding: 9px 20px;
    }
    .input-checkbox{
    	width: 13px;
		height: 13px;
      	vertical-align: middle;
    }
    .step__sections .section{
    	padding-top: 34px;
    }
    .floating-labels .address-fields .field{
    	padding-bottom: 16px;
    }
    .sidebar::after{
    	box-shadow: unset;
    }
    .sidebar{
    	padding-left: 5%;
    }
    /* Checkout footer css */
    .checkout__footer{
      display:flex;
      align-item:center;
    }
    .checkout__footer a{
      padding-left:40px;
      color: #30383D;
      font-size: 14px;
      line-height: 17px;
    }
    .checkout__footer p{
	  font-size: 14px;
      line-height:17px;
      color: #30383D;
   	}
    .input-checkbox {
      width: 18px;
      height: 18px;
    }

    .order-summary__section--discount .edit_checkout .fieldset .field__input-btn-wrapper .field__input-wrapper input#checkout_reduction_code {
      font-size: 13px;
      padding: 0.9em 0.8em;
    }
    .order-summary__section--discount .edit_checkout .fieldset .field__input-btn-wrapper .field__input-btn  {
      width: auto;
    }

    .order-summary__section--discount .edit_checkout .fieldset .field--show-floating-label .field__input-btn-wrapper .field__input-wrapper input#checkout_reduction_code {
      padding: 1.5em 0 0.3571428571em 0.8em;
    }
    
    .order-summary__section--discount .edit_checkout .fieldset .checkout-text {
      display: none;
/*       display: inline-block; */
      padding-left: 0.4285714286em;
      color: #e22120;
    }
    
    @media screen and (max-width: 1199px){
      .checkout__footer a {
    	padding-left: 30px;
      }
    }
    @media screen and (max-width: 1024px){
      .checkout__footer a {
    	padding-left: 20px;
      }
      .order-summary__section--discount .edit_checkout .fieldset .field__input-btn-wrapper .field__input-wrapper input#checkout_reduction_code {
        font-size: 10px;
      }
    }
    @media screen and (max-width: 575px){
      .checkout__footer{
        display:block;
        text-align: center;
      }
    }
  </style>
  </head>
  <body>
    {{ skip_to_content_link }}

    <header class="banner" data-header role="banner">
      <div class="wrap">
        {{ content_for_logo }}
      </div>
    </header>

    {{ order_summary_toggle }}
    <div class="content" data-content>
      <div class="wrap">
        <div class="main">
          <header class="main__header" role="banner">
            {{ content_for_logo }}
            {{ breadcrumb }}
            {{ alternative_payment_methods }}
          </header>
          <main class="main__content" role="main">
            {{ content_for_layout }}
          </main>
          <footer class="main__footer" role="contentinfo">
            {{ content_for_footer }}
          </footer>
        </div>
        <aside class="sidebar" role="complementary">
          <div class="sidebar__header">
            {{ content_for_logo }}
          </div>
          <div class="sidebar__content">
            {{ content_for_order_summary }}
          </div>
        </aside>
      </div>
    </div>

    {{ tracking_code }}
  </body>
</html>
<script>
  var element = document.querySelector('.order-summary__section .edit_checkout .field');
  element.insertAdjacentHTML('afterend', '<div class="checkout-text"><i>*One code per order</i></div>');
</script>
