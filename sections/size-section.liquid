<section class="section size-with-text">
     <div class="page-width">
        <div class="icon-wrapper">
          {%- for block in section.blocks -%}
            <div class="icon-text-content ">
               {% if block.settings.icon_image %}
                  <div class="svg-img">{{ block.settings.icon_image }}</div>
               {%  endif %}
               <h5 class="icon_text">{{ block.settings.title }}</h5>
            </div>
         {%  endfor %}
        </div>
    </div>

   
</section>

{% schema %}
  {
    "name": "Icon with text",
    "settings": [
      {
        "type": "text",
        "id": "custom-class",
        "label": "custom-class"
      }
      
    ],
     "blocks": [
    {
     "type": "block",
     "name": "Size",
     "limit":3,
     "settings": [
        {
          "type": "textarea",
          "id": "icon_image",
          "label": "Add Icon"
        },

        {
          "type": "text",
          "id": "title",
          "label": "Enter type"
        }
      ]
    }
  
  ],
    "presets": [
    {
      "name": "Size-section",
      "settings": {}
    }
  ]
  }
{% endschema %}

