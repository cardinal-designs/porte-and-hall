<div class="announcement-bar swiper">
  <div class="swiper-wrapper">
      {% if section.settings.link != blank %}
        <a href="{{ section.settings.link }}" class="announcement-bar__item">
      {% endif %}
        <div class="page-width">
          <p>{{ section.settings.text }}</p>
        </div>
    {% if section.settings.link != blank %}
      </a>
    {% endif %}
  </div>
</div>

<style>
  .announcement-bar {
    color: {{ section.settings.text_color }};
    background-color: {{ section.settings.background_color }};
  }

  .announcement-bar a {
    color: {{ section.settings.text_color }};
  }
</style>

{% javascript %}
  const announcementBarSlider = new Swiper('.announcement-bar', {
    slidesPerView: 1,
    loop: true,
    spaceBetween: 20
  });
{% endjavascript %}
 

{% schema %}
{
  "name": "Announcement Bar",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "default": "Welcome to our store",
      "label": "Text"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    }
  ]
}
{% endschema %}
