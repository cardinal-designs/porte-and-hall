<!-- sections/how-it-works.liquid -->
<section class="how-it-works-section">
  <div class="how-it-works-container">
    
    <!-- Left Image -->
    <div class="how-it-works-image">
      {% if section.settings.image != blank %}
        <img
          src="{{ section.settings.image | img_url: '1024x' }}"
          alt="{{ section.settings.image_alt | escape }}"
        />
      {% else %}
        <img
          src="//placehold.it/600x400"
          alt="Placeholder Image"
        />
      {% endif %}
    </div>
    
    <!-- Right Content -->
    <div class="how-it-works-content">
      <div class="how-it-works-box">
        <h2 class="how-it-works-heading">{{ section.settings.heading }}</h2>
        <ul class="how-it-works-steps">
          {% for step in section.blocks %}
            <li class="step">
              <span class="step-icon">*</span>
              <span class="step-text">{{ step.settings.step_text }}</span>
            </li>
          {% endfor %}
        </ul>
        <a href="{{ section.settings.button_link }}" class="how-it-works-button">
          {{ section.settings.button_text }}
        </a>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "How it Works",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image Alt Text",
      "default": "How it Works Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "How it works"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button URL"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Become a member"
    }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Step",
      "settings": [
        {
          "type": "text",
          "id": "step_text",
          "label": "Step Text",
          "default": "Sample step text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "How it Works Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.how-it-works-section {
  display: flex;
  justify-content: center;
  padding: 40px 20px;
  background-color: #fff;
}

.how-it-works-container {
  max-width: 1200px;
  display: flex;
  flex-wrap: wrap;
  gap: 40px;
}

.how-it-works-image img {
  width: 100%;
  max-width: 600px;
  object-fit: cover;
}

.how-it-works-content {
  flex: 1;
  margin-left: auto;
}

.how-it-works-box {
  border: 2px solid #d1a76d;
  padding: 20px;
  border-radius: 8px;
}

.how-it-works-heading {
  font-size: 2rem;
  color: #6f4b37;
  margin-bottom: 20px;
  text-align: center;
}

.how-it-works-steps {
  list-style: none;
  padding: 0;
  margin: 0 0 30px;
}

.step {
  display: flex;
  align-items: center;
  margin-bottom: 15px;
}

.step-icon {
  display: inline-block;
  width: 20px;
  height: 20px;
  background-color: #d1a76d;
  border-radius: 50%;
  text-align: center;
  color: #fff;
  font-size: 14px;
  margin-right: 12px;
  font-family: sans-serif;
}

.step-text {
  font-size: 1rem;
  line-height: 1.5;
  color: #333;
}

.how-it-works-button {
  display: block;
  width: fit-content;
  text-align: center;
  margin: 0 auto;
  padding: 12px 20px;
  background-color: #d1a76d;
  color: #fff;
  text-decoration: none;
  border-radius: 4px;
  font-weight: bold;
  font-size: 1rem;
}
{% endstylesheet %}