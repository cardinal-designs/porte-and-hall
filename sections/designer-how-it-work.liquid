<section class="how-it-works-section">
  <div class="how-it-works-container">
    <!-- Left Image Section -->
    <div class="how-it-works-image">
      {% if section.settings.image != blank %}
        <img 
          src="{{ section.settings.image | img_url: '1024x' }}" 
          alt="{{ section.settings.image_alt | escape }}" 
          class="how-it-works-img"
        />
      {% else %}
        <img 
          src="//placehold.it/600x400" 
          alt="Placeholder Image"
          class="how-it-works-img"
        />
      {% endif %}
    </div>

    <!-- Right Content Section -->
    <div class="how-it-works-content">
      <h2 class="how-it-works-title">{{ section.settings.heading }}</h2>
      <div class="how-it-works-description">
        <ul class="how-it-works-steps">
          {% for step in section.blocks %}
            {% if step.type == 'step' %}
              <li class="step">
                <div class="step-icon"></div>
                <p class="step-text">{{ step.settings.step_text }}</p>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
      <div class="how-it-works-button-container">
        <a href="{{ section.settings.button_link }}" class="how-it-works-button">
          {{ section.settings.button_text }}
        </a>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "How it Works",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Left Image"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image Alt Text"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "How it works:"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Become a member"
    }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Step",
      "settings": [
        {
          "type": "text",
          "id": "step_text",
          "label": "Step Description",
          "default": "Write your step description here."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "How it Works Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.how-it-works-section {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  padding: 60px 20px;
  background-color: white;
}

.how-it-works-container {
  max-width: 1200px;
  display: flex;
  flex-wrap: nowrap;
  gap: 40px;
}

.how-it-works-image {
  flex: 1;
}

.how-it-works-img {
  max-width: 100%;
  height: auto;
  border-radius: 8px;
}

.how-it-works-content {
  flex: 1;
  padding-left: 40px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.how-it-works-title {
  font-size: 2rem;
  font-weight: bold;
  color: #705335;
  margin-bottom: 30px;
}

.how-it-works-description {
  margin-bottom: 30px;
}

.how-it-works-steps {
  list-style: none;
  padding: 0;
  margin: 0;
  position: relative;
  border-left: 2px dotted #c0c0c0; 
}

.step {
  display: flex;
  align-items: flex-start;
  margin-bottom: 25px;
  padding-left: 20px;
  position: relative;
}

.step-icon {
  width: 12px;
  height: 12px;
  background-color: #705335;
  border-radius: 50%;
  position: absolute;
  left: -7px; /* Align centered to the dotted line */
  top: 6px;
}

.step-text {
  font-size: 1rem;
  line-height: 1.6;
  color: #333;
}

.how-it-works-button-container {
  margin-top: 20px;
}

.how-it-works-button {
  display: inline-block;
  padding: 12px 24px;
  background-color: #c79f6e;
  color: white;
  font-size: 1rem;
  font-weight: bold;
  text-decoration: none;
  border-radius: 4px;
  transition: all 0.3s ease;
}

.how-it-works-button:hover {
  background-color: #b58849;
}
{% endstylesheet %}