      "default": "standard_card"
    },
    { "type": "text", "id": "button_text", "label": "Button text", "default": "Shop Now" },
    { "type": "url", "id": "btn_link", "label": "Bottom Button Link" }
  ],
  "presets": [ { "name": "Product Carousel New 2" } ]
}
{% endschema %}