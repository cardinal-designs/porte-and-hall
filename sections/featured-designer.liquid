{{ 'section-meet-founder.css' | asset_url | stylesheet_tag }}

<section id="{{ section.id }}" class="meet-founder {% if section.settings.hide_mobile == true %}Hide_Mobile{% endif %} {% if section.settings.hide_desktop == true %}Hide_Desktop{% endif %}">
  <div class="meet-founder__background">
    <div class="meet-founder__inner meet-founder__layout-{{ section.settings.alignment }}">
      <div class="meet-founder__content-wrapper featured-designer__content-wrapper">

        {% if section.settings.heading != blank %}
          <h2 class="meet-founder__heading">{{ section.settings.heading | newline_to_br }}</h2>
        {% endif %}

        {% if section.settings.text != blank %}
          <p class="body">{{ section.settings.text }}</p>
        {% endif %}

        {% if section.settings.heading2 != blank %}
          <h2 class="meet-founder__heading">{{ section.settings.heading2 | newline_to_br }}</h2>
        {% endif %}

        {% if section.settings.text2 != blank %}
          <p class="body">{{ section.settings.text2 }}</p>
        {% endif %}

        {% if section.settings.link != blank and section.settings.link_text != blank %}
          <a href="{{ section.settings.link }}" class="text-link button">
            {{- section.settings.link_text }}</a
          >
        {% endif %}
      </div>

      {% if section.settings.image != blank %}
        <div class="meet-founder__image-wrapper">
          {{ section.settings.image | image_url: width: 1000 | image_tag: class: "lazyload" }}
        </div>
      {% endif %}

    </div>
  </div>
</section>

<style>

  #{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
  }

  #{{ section.id }} .meet-founder__heading,
  #{{ section.id }} .meet-founder__content-wrapper p.body {
    color: {{ section.settings.text_color }};
  }

  {% if section.settings.border != true %}
    #{{ section.id }} .meet-founder__background {
      border: 0;
    }
  {% endif %}
  
</style>

{% schema %}
{
  "name": "Featured Designer",
  "settings": [
    {
      "type": "checkbox",
      "id": "hide_desktop",
      "label": "Hide on Desktop"
    },
    {
      "type": "checkbox",
      "id": "hide_mobile",
      "label": "Hide on Mobile"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color"
    },
    {
      "type": "checkbox",
      "id": "border",
      "label": "Show Border",
      "default": true
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Content Alignment",
      "options": [
        {
          "label": "Left",
          "value": "left"
        },
        {
          "label": "Right",
          "value": "right"
        }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "textarea",
      "id": "heading2",
      "label": "Heading 2"
    },
    {
      "type": "textarea",
      "id": "text2",
      "label": "Text 2"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link text"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
      "info": "Only for Left or Right layout alignments"
    }
  ],
  "presets": [
    {
      "name": "Featured Designer"
    }
  ]
}
{% endschema %}

<style>
  
  .meet-founder__background{
    border: 0px;
  }

  .meet-founder{
    padding: 10px 0px;
  }
  
</style>

