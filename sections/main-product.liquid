            {% if option.name == 'Size' %}
              {% continue %}
            {% endif %}
            <span>
              {%- if option.name == 'Color' or option.name == 'color' -%}
                {%- if product.title contains 'Outlier' or product.title contains 'Outsider' -%}
                  {{ option.name }}
                {% else %}
                  Style
