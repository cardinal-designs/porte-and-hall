                          {% if feature.image != blank %}{{ feature.image | image_url: width: 206 | image_tag: width: 103 }}{% endif %}
                          <p class="body-sm">{{ feature.label }}</p>
                        </div>
                      {% endfor %}
                    </div>
                  </div>
                </div>
              {% endif %}

              {% if section.settings.materials != blank %}
                <div class="swiper-slide">
                  <div class="product__tabs-item body-sm">
