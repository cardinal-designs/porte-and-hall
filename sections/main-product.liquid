              data-product-tabs="{{ tab_count }}"
            >
              Care
            </button>

            {% assign tab_count = tab_count | plus: 1 %}
          {% endif %}
        </div>

        <div class="product__tabs-content">
          <div class="product__tabs swiper">
            <div class="swiper-wrapper">
              {% if grouped_collection.metafields.custom.product_features != blank %}
                <div class="swiper-slide">
                  <div class="product__tabs-item">
                    <div class="product__features">
                      {% for feature in grouped_collection.metafields.custom.product_features.value %}
