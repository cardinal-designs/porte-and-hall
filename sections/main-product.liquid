              {% if grouped_collection.metafields.custom.dimensions != blank %}
                <div class="swiper-slide">
                  <div class="product__tabs-item">
                    <p class="body-sm">
                      Dimensions: {{ grouped_collection.metafields.custom.dimensions | newline_to_br }}
