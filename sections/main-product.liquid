{% liquid
  for collection in product.collections
    if collection.title contains ' |'
      assign grouped_collection = collection
    endif
  endfor

  assign oos_products = grouped_collection.products | where: 'available', false
  assign oos_products = ""

  assign color_label = 'color,colour,couleur,colore,farbe,색,色,färg,farve' | split: ','
  assign collection_title = grouped_collection.title | downcase
  capture color_swatch_list
    assign swatch_count = 1
    for swatch in grouped_collection.products
      for option in swatch.options_with_values
        assign option_name = option.name | downcase
        if color_label contains option_name or option_name == 'style'
          assign option_index = 'option' | append: forloop.index
          for value in option.values
            assign matched_variant = swatch.variants | where: 'title', value
            if matched_variant != blank
              assign swatch_link = matched_variant[0].url
            endif
            assign element_classes = 'product__swatch'
            if swatch == product and option.selected_value == value
              assign element_classes = element_classes | append: ' product__active-swatch'
            endif
            if swatch.available == false
              assign element_classes = element_classes | append: ' product__oos-swatch'
            endif
            assign swatch_file_name = value | handle | append: '.png'
            assign swatch_image = images[swatch_file_name]
            comment
              if collection_title contains 'outsider' and swatch_count == 4
                echo ' | '
              endif
            endcomment
            echo "<a href='"
            echo swatch_link | default: swatch.variants[0].url
            echo "' class='"
            echo element_classes
            echo "'"
            echo "data-tooltip='"
            echo value | escape
            echo "' ><span "
            echo "style='background-image: url("
            echo swatch_file_name | asset_url
            echo ")'>"
            echo '</span></a>'
            assign swatch_count = swatch_count | plus: 1
          endfor
        endif
      endfor
    endfor
  endcapture
%}

<script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>

<section class="page-width">
  <div class="product">
    <a class="skip-to-content-link button visually-hidden" href="#ProductInfo-{{ section.id }}">
      {{ 'accessibility.skip_to_product_info' | t }}
    </a>

    <div class="product__media-wrapper">
      <ul class="hide-mobile product__media-thumbnails list-unstyled swiper" role="list">
        <div class="swiper-wrapper">
          {% for media in product.media %}
            <li class="product__media-thumbnail-item swiper-slide" data-media-id="{{ section.id }}-{{ media.id }}">
              {% render 'product-media', media: media, position: forloop.index, width: '106' %}
            </li>
          {% endfor %}
        </div>
      </ul>

      <ul class="product__media-list list-unstyled swiper" role="list">
        <div class="swiper-wrapper">
          {% for media in product.media %}
            <li class="product__media-item swiper-slide" data-media-id="{{ section.id }}-{{ media.id }}">
              {% render 'product-media', media: media, position: forloop.index %}
              <div class="product__media-buttons">
                {% render 'pin-button', media: media %}
                {% render 'zoom-button' %}
              </div>
            </li>
          {% endfor %}
        </div>
        <div class="product__media-pagination swiper-pagination hide-desktop"></div>
        <div class="product__media-button swiper-button-prev hide-desktop"></div>
        <div class="product__media-button swiper-button-next hide-desktop"></div>
      </ul>
    </div>

    <div class="product__info-wrapper">
      <div id="ProductInfo-{{ section.id }}" class="product__info-container">
        {% assign product_form_id = 'product-form-' | append: section.id %}

        <h3 class="product__tag gray">
          {{ product.variants.first.metafields.filters.use.value.first }}
        </h3>

        <h1 class="product__title blue">
          {{ grouped_collection.title | remove: ' |' | default: product.title }}
        </h1>

        <div class="product__price-reviews-wrapper">
          <div class="no-js-hidden" id="price-{{ section.id }}" role="status">
            {% render 'price', product: product, use_variant: true, show_badges: true, price_class: '' %}
          </div>

          <span class="blue"> | </span>

          <!-- Rating code -->
          <div class="rating-reviews">
            <span
              class="stamped-product-reviews-badge stamped-main-badge"
              data-id="{{ product.id }}"
              data-product-sku="{{ product.handle }}"
              data-product-type="{{product.type}}"
              data-product-title="{{product.title}}"
              style="display: inline-block;"
            >
              {{- product.metafields.stamped.badge -}}
            </span>
          </div>
        </div>

        {% if grouped_collection.metafields.custom.short_description != blank or product.description != blank %}
          <div class="product__description body blue">
            {{ grouped_collection.metafields.custom.short_description | default: product.description }}
          </div>
        {% endif %}

        {% for option in product.options_with_values %}
          <div class="product__variant-name body">
            {% if option.name == 'Size' %}
              {% continue %}
            {% endif %}
            <span>
              {%- if option.name == 'Color' or option.name == 'color' -%}
                {%- if product.title contains 'Outlier' or product.title contains 'Outsider' -%}
                  {{ option.name }}
                {% else %}
                  Style
                {%- endif -%}
              {%- else -%}
                  {{ option.name }}
              {%- endif -%}
            </span>
            <span> — {{ option.selected_value }}</span>
          </div>
        {% endfor %}

        <div class="product__swatches">
          {{ color_swatch_list }}
        </div>
        <div>
          {% form 'product', product, id: 'product-form-installment', class: 'installment' %}
            <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
            {{ form | payment_terms }}
          {% endform %}
        </div>

