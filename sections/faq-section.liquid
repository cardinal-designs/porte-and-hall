{{ 'section-faq.css' | asset_url | stylesheet_tag }}

<div id="faqs">
  <div class="page-width">
    <div class="row">
      <div class="col-12">
        <h2>{{ section.settings.title }}</h2>    
      </div>
    </div>
   <div class="faq-items row">
    {% for block in section.blocks %}
      <div class="faq-col {% if forloop.index == 1 %}is-open{% endif %}">
        <div class="faq-col-inner">
          <p class="body Faq_Question">{{ block.settings.title }}</p>
          <div class="body Faq_Answer">{{ block.settings.answer }}</div>   
          <span class="Faq_Icon"> {% render 'icon', icon: 'plus' %}{% render 'icon', icon: 'minus' %}</span>
        </div>
      </div>
    {% endfor %}
    </div>
  </div>
</div>

