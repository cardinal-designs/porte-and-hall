<div id="faqs">
  <div class="page-width">
    <div class="row">
      <div class="col-12">
        <h2>{{ section.settings.title }}</h2>    
      </div>
    </div>
   <div class="faq-items row">
    {% for block in section.blocks %}
      <div class="faq-col">
        <div class="faq-col-inner">
          <p class="body Faq_Question">{{ block.settings.title }}</p>
          <div class="body Faq_Answer">{{ block.settings.answer }}</div>    
        </div>
      </div>
    {% endfor %}
    </div>
  </div>
</div>

<style>
  
  #faqs {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.color }};
    padding: 100px 0;
  }

  #faqs .faq-col-inner {
    padding: 30px 0;
    position: relative;
    cursor: pointer;
    border-top: 1px solid #546B82;
  }

  #faqs p {
    color: inherit;
  }

  .Faq_Question {
    font-weight: 500;
  }

  .Faq_Answer {
    font-weight: 400;
    max-height: 0;
    overflow: hidden;
    transition: 0.4s;
  }
  
  #faqs h2 {
    margin: 0 auto 38px;
    padding: 0 11px;
  }

  #faqs p.faq-title {
    margin-bottom: 0px;
    padding-right: 30px;
    line-height: 1.15;
  }

  .faq-items .faq-col {
     padding: 0 11px;
  }

  #faqs .faq-items {
    display: block;
    column-count: 2;
  }

  .Faq_Answer.active {
    height: 100%;
    opacity: 1;
  }

  .faq-col-inner.is-open .Faq_Answer {
    max-height: 100%;
  }

</style>

