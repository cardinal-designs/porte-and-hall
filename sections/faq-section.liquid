{% schema %}
{
  "name": "FAQs",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Section Background Color",
      "default": "#FFE8D5"
    },
    {
      "type": "color",
      "id": "bg_color_answer",
      "label": "Question Background Color",
      "default": "#A34C24"
    },
    {
      "type": "color",
      "id": "bg_color_answer_active",
      "label": "Question Background Color (Active)",
      "default": "#E31C79"
    },
    {
      "type": "color",
      "id": "color",
      "label": "Font Color",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "main_header",
      "label": "Header",
      "default": "Ingredients"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Header Text"
    }
  ],
  "blocks": [
    {
      "type": "Item",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Question"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQs"
    }
  ]
}
