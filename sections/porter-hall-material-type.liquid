{{ 'porter-hall-material-type.css' | asset_url | stylesheet_tag: preload: true }}

{% if section.settings.image_doublewide != blank or section.settings.image_standard != blank %}
<section class="two-of-a-kind-section" id="section--{{ section.id }}">
  <div class="page-width">
    
    <h2 class="section-title">{{ section.settings.title }}</h2>
    
    <div class="two-columns">
      {% if section.settings.image_doublewide != blank %}
        <div class="column">
          <figure>
            {{ section.settings.image_doublewide | image_url: width: 1200 | image_tag: width: "100%", loading: "lazy", alt: section.settings.image_doublewide.alt }}
          </figure>
          <div class="dimension-text-vertical">3'6"</div>
          <div class="dimension-text-horizontal">6'</div>
          <h3 class="column-title">{{ section.settings.doublewide_title }}</h3>
          <div class="column-description">{{ section.settings.doublewide_description }}</div>
        </div>
      {% endif %}

      {% if section.settings.image_standard != blank %}
        <div class="column">=
          <figure>
            {{ section.settings.image_standard | image_url: width: 1200 | image_tag: width: "100%", loading: "lazy", alt: section.settings.image_standard.alt }}
          </figure>
          <div class="dimension-text-vertical">2'6"</div>
          <div class="dimension-text-horizontal">4'</div>
          <h3 class="column-title">{{ section.settings.standard_title }}</h3>
          <div class="column-description">{{ section.settings.standard_description }}</div>
        </div>
      {% endif %}
    </div>
  </div>
</section>
{% endif %}

<style>
  #section--{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
  }
</style>

{% schema %}
{
  "name": "Two of a Kind",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Two of a Kind"
    },
    {
      "type": "image_picker",
      "id": "image_doublewide",
      "label": "Image for Doublewide"
    },
    {
      "type": "text",
      "id": "doublewide_title",
      "label": "Title for Doublewide",
      "default": "Doublewide"
    },
    {
      "type": "richtext",
      "id": "doublewide_description",
      "label": "Description for Doublewide",
      "default": "<p>Have a huge front door (or more than one)? We designed this big(ger) boy with you in mind.</p>"
    },
    {
      "type": "image_picker",
      "id": "image_standard",
      "label": "Image for Standard"
    },
    {
      "type": "text",
      "id": "standard_title",
      "label": "Title for Standard",
      "default": "Standard"
    },
    {
      "type": "richtext",
      "id": "standard_description",
      "label": "Description for Standard",
      "default": "<p>Perfectly oversized and anything but ordinary, this mat was made to make a statement at most doors.</p>"
    }
  ]
}
{% endschema %}