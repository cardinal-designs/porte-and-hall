{% style %}
  .image-gallery {
    display: grid;
    grid-template-columns: 1fr 1fr;
  }
{% endstyle %}

<div class="image-gallery">
  {% for block in section.settings.blocks %}
    {{ block | image_url: width: 100 | image_tag: width: "100%" }}
  {% endfor %}
</div>

{% schema %}
{
  "name": "Image gallery",
  "class": "custom-image-gallery",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Title"
    }
  ],
  "blocks": [
  {
   "type": "block",
   "name": "Image",
   "settings": [

      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
    ]
  }
],
"presets": [
    {
      "name": "Image gallery",
      "settings": {}
    }
  ]
}
{% endschema %}
