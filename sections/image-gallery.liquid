{% style %}
  #shopify-section-{{section.id}} .heading-with-accents a {
    color: inherit;
  }

  #shopify-section-{{section.id}} .heading-with-accents p a:after {
    content: "";
    position: absolute;
    bottom: 4px;
    width: 100%;
    height: 1px;
    background: currentColor;
    right: 0px;
  }  
  
  .image-gallery {
    display: grid;
    grid-template-columns: 1fr 1fr;
  }
{% endstyle %}

<div class="page-width">
  <div class="heading-with-accents">
    <span class="divider header-divider"><span class="divider-line"></span></span>
    <div class="h2 blue">
      {{ section.settings.title }}
    </div>    
    <span class="divider header-divider"> <span class="divider-line"></span> </span>    
  </div>
  
  <div class="image-gallery">
    {% for block in section.settings.blocks %}
      {{ block | image_url: width: 100 | image_tag: width: "100%" }}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Image gallery",
  "class": "custom-image-gallery",
  "tag": "section",
  "settings": [
    {
      "type": "richtext",
      "id": "title",
      "label": "Heading"
    }
  ],
  "blocks": [
  {
   "type": "block",
   "name": "Image",
   "settings": [

      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
    ]
  }
],
"presets": [
    {
      "name": "Image gallery",
      "settings": {}
    }
  ]
}
{% endschema %}
