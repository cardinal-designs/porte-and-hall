{{ 'designer-how-support.css' | asset_url | stylesheet_tag: preload: true }}

<section class="designer__how--support" style="background: {{ section.settings.bg_color }}">
  <div class="page-width">
    <div class="designer__how--support-content">
      <h2 class="title">{{ section.settings.heading }}</h2>
      <hr class="separator">
      <ul class="features__list">
        {% for feature in section.blocks %}
          {% if feature.settings.title != blank and feature.settings.description != blank %}
            <li class="feature__item">
              <div class="feature__details">
                <h3 class="feature__title">{{ feature.settings.title }}</h3>
                <p class="feature__description">{{ feature.settings.description }}</p>
              </div>
            </li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>

    <div class="designer__how--support-image">
      <h2 class="title">{{ section.settings.heading }}</h2>
      {% if section.settings.image != blank %}
        <img src="{{ section.settings.image | img_url: '1024x' }}" alt="{{ section.settings.image_alt | escape }}">
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "How We Support You",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "How we support you"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Right Image"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image Alt Text",
      "default": "How we support you image"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Feature Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Feature description goes here."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "How We Support You"
    }
  ]
}
{% endschema %}
