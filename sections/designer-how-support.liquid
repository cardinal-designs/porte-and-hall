{{ 'designer-how-support.css' | asset_url | stylesheet_tag: preload: true }}

<section class="how-we-support-you-section">
  <div class="container">
    <!-- Left Content -->
    <div class="content">
      <h2 class="title">{{ section.settings.heading }}</h2>
      <hr class="separator">
      <ul class="features-list">
        {% for feature in section.blocks %}
          <li class="feature">
            <span class="feature-icon">â—†</span>
            <div class="feature-details">
              <h3 class="feature-title">{{ feature.settings.title }}</h3>
              <p class="feature-description">{{ feature.settings.description }}</p>
            </div>
          </li>
        {% endfor %}
      </ul>
    </div>

    <!-- Right Image -->
    <div class="image">
      {% if section.settings.image != blank %}
        <img src="{{ section.settings.image | img_url: '1024x' }}" alt="{{ section.settings.image_alt | escape }}">
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "How We Support You",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "How we support you"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Right Image"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image Alt Text",
      "default": "How we support you image"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Feature Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Feature description goes here."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "How We Support You"
    }
  ]
}
{% endschema %}
