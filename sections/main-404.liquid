<style type="text/css">
  .template-404 .title + * {
    margin-top: 1rem;
  }
  
  .template-404 {
    padding: 40px 0;
    text-align: center;
  }

  .template-404 h1 {
    margin: 1rem 0 0;
  }

  .template-404 .button {
    display: inline-block;
  }

  #{{ section.id }} .Page_Header {
    height: 186px;
  }

  @media screen and (min-width: 769px) {
    
    .template-404 .title + * {
      margin-top: 2rem;
    }

    .template-404 {
      padding: 50px 0;
    }

    #{{ section.id }} .Page_Header {
      height: {{ section.settings.section_height }}px;
    }

  }
</style>
<div class="Page_Header" style="background-image:url({{ section.settings.image | img_url : '1920x' }});">
  <div class="template-404 page-margin center"style="background-color:{{ section.settings.bg_color }}">
    <div class="fan-motif__motif">
      <img src="{{ fan-motif }}" width="67" alt="Fan motif">
    </div>   
    <h1 class="h1">
      {{ 'templates.404.subtext' | t }}
    </h1>
    <p class="title">
      {{ 'templates.404.title' | t }}
    </p>
    <a href="{{ routes.all_products_collection_url }}" class="button">
      {{ 'general.continue_shopping' | t }}
    </a>
  </div>
</div>

{% schema %}
{
  "name": "404 Page",
  "tag": "section",
  "class": "spaced-section",
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "select",
      "id": "section_height",
      "label": "Section Height",
      "options": [
        {
          "label": "250",
          "value": "250"
        },
        {
          "label": "350",
          "value": "350"
        },
        {
          "label": "450",
          "value": "450"
        },
        {
          "label": "550",
          "value": "550"
        }
      ],
      "default": "350"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#F4F2EE"
    }
  ]
}
{% endschema %}
