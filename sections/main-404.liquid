<style type="text/css">
  .template-404 .title + * {
    margin-top: 1rem;
  }
  
  .template-404 {
    padding: 40px 0;
    text-align: center;
  }

  .template-404 h1 {
    margin: 1rem 0 0;
    color: var(--blue);
  }

  .template-404 .button {
    display: inline-block;
  }

  #{{ section.id }} .Page_Header {
    height: 186px;
  }

  span.Not_Found_Icon img {
    max-width: 200px;
  }
  
  @media screen and (min-width: 769px) {
    
    .template-404 .title + * {
      margin-top: 2rem;
    }

    .template-404 {
      padding: 50px 0;
    }

    #{{ section.id }} .Page_Header {
      height: {{ section.settings.section_height }}px;
    }

    span.Not_Found_Icon img {
      max-width: 350px;
    }

  }

</style>
<div class="Page_Header" style="background-image:url({{ section.settings.image | img_url : '1920x' }});">
  <div class="template-404 page-margin center"style="background-color:{{ section.settings.bg_color }}">
<!--     <p class="body">
      {{ 'templates.404.subtext' | t }}
    </p> -->

    <span class="Not_Found_Icon">
      <img src="{{ '404.svg' | asset_url }}">
    </span>
    <h1 class="title">
      {{ 'templates.404.title' | t }}
    </h1>
    <a href="{{ routes.all_products_collection_url }}" class="button">
      {{ 'general.continue_shopping' | t }}
    </a>
  </div>
</div>
