<style type="text/css">
  .template-404 .title + * {
    margin-top: 1rem;
  }
  
  .template-404 {
    padding: 40px 0;
    text-align: center;
  }

  .template-404 h1 {
    margin: 1rem 0 0;
  }

  .template-404 .button {
    display: inline-block;
  }
    
  @media screen and (min-width: 769px) {
    .template-404 .title + * {
      margin-top: 2rem;
    }

    .template-404 {
      padding: 50px 0;
    }
  }
</style>

<div class="template-404 page-width page-margin center">
  <p class="body">
    {{ 'templates.404.subtext' | t }}
  </p>
  <h1 class="title">
    {{ 'templates.404.title' | t }}
  </h1>
  <a href="{{ routes.all_products_collection_url }}" class="button">
    {{ 'general.continue_shopping' | t }}
  </a>
</div>

{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "class": "spaced-section",
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "select",
      "id": "section_height",
      "label": "Section Height",
      "options": [
        {
          "label": "250",
          "value": "250"
        },
        {
          "label": "350",
          "value": "350"
        },
        {
          "label": "450",
          "value": "450"
        },
        {
          "label": "550",
          "value": "550"
        }
      ],
      "default": "350"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#F4F2EE"
    }
  ]
}
{% endschema %}
