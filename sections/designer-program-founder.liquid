{{ 'designer-program-founder.css' | asset_url | stylesheet_tag: preload: true }}

<section class="designer-quote-section">
  <div class="page-width">
    <div class="quote-wrapper">
      {% if section.settings.small_heading != blank %}
        <p class="quote-heading">{{ section.settings.small_heading }}</p>
      {% endif %}
      {% if section.settings.quote != blank %}
        <h3 class="quote-text">{{ section.settings.quote }}</h3>
      {% endif %}
      {% if section.settings.author != blank %}
        <div class="divider-line">
          <span class="author">{{ section.settings.author }}</span>
        </div>
      {% endif %}
      {% if section.settings.signature_image != blank %}
        <div class="signature-image">
          {{ section.settings.signature_image | image_url: width: 310 | image_tag: width: "100%", loading: "lazy", alt: section.settings.signature_image.alt }}
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Founder Quote",
  "settings": [
    {
      "type": "text",
      "id": "small_heading",
      "label": "Small Heading",
      "default": "From One Designer to Another"
    },
    {
      "type": "textarea",
      "id": "quote",
      "label": "Quote Text",
      "default": "A beautiful space should make a beautiful first impression, and that’s what we’re here for: To support your creative vision with mats that’ll wow your clients from the start."
    },
    {
      "type": "text",
      "id": "author",
      "label": "Author Name",
      "default": "STAFFORD – FOUNDER"
    },
    {
      "type": "image_picker",
      "id": "signature_image",
      "label": "Signature Image"
    }
  ],
  "presets": [
    {
      "name": "Founder Quote Section"
    }
  ]
}
{% endschema %}
