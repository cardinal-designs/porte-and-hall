{{ 'designer-message-wishes.css' | asset_url | stylesheet_tag: preload: true }}

<section class="designer__message--thanks">
  <div class="page-width">
    <div class="designer__message--container">
      <div class="designer__message--text">
        <h2 class="title">{{ section.settings.title }}</h2>
        <hr class="separator">
        <p class="description">{{ section.settings.description }}</p>
      </div>
  
      {% if section.settings.image != blank %}
        <div class="designer__message--image-wrapper">          
          <div class="image__container"> 
            <img src="{{ section.settings.image | image_url: width: 1200 }}" alt="{{ section.settings.image.alt  }}" height="auto" width="auto">
            <div class="overlay">{{ section.settings.overlay_text }}</div>
          </div>          
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Send Client Thanks",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Send Your Client a Special Thanks"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "The perfect way to wrap up that great project and show your client gratitude: With a beautiful mat— that we’ll send their way in pretty packaging, with a personalized note attached."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image Alt Text",
      "default": "Door mat image"
    },
    {
      "type": "text",
      "id": "overlay_text",
      "label": "Image Overlay Text",
      "default": "A personalized card & beautiful mat just for you"
    }
  ],
  "presets": [
    {
      "name": "Send Client Thanks",
      "category": "Custom"
    }
  ]
}
{% endschema %}
