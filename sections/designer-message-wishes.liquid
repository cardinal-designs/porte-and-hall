<section class="send-client-thanks">
  <div class="container">
    <!-- Left Text Block -->
    <div class="content-block">
      <h2 class="section-title">{{ section.settings.title }}</h2>
      <hr class="divider">
      <p class="description">{{ section.settings.description }}</p>
      <div class="circle-icon">
        {{ section.settings.icon_letter }}
      </div>
    </div>

    <!-- Right Image Block -->
    <div class="image-block">
      {% if section.settings.image != blank %}
        <div class="image-wrapper">
          <img src="{{ section.settings.image | img_url: '1024x' }}" alt="{{ section.settings.image_alt | escape }}" class="section-image">
          <div class="overlay">{{ section.settings.overlay_text }}</div>
          <div class="badge-group">
            <span class="badge">P</span>
            <span class="badge">A</span>
            <span class="badge">J</span>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Send Client Thanks",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Send Your Client a Special Thanks"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "The perfect way to wrap up that great project and show your client gratitude: With a beautiful mat— that we’ll send their way in pretty packaging, with a personalized note attached."
    },
    {
      "type": "text",
      "id": "icon_letter",
      "label": "Circle Icon Letter",
      "default": "J"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image Alt Text",
      "default": "Door mat with flowers"
    },
    {
      "type": "text",
      "id": "overlay_text",
      "label": "Image Overlay Text",
      "default": "A personalized card & beautiful mat just for you"
    }
  ],
  "presets": [
    {
      "name": "Send Client Thanks",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

{% stylesheet %}
/* Section Wrapper */
.send-client-thanks {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 80px 20px;
  background-color: #f9f7f3;
}

.container {
  display: flex;
  gap: 50px;
  align-items: center;
  max-width: 1200px;
}

/* Left Content Styling */
.content-block {
  flex: 1;
  background-color: #f9f7f3;
  padding: 20px;
}

.section-title {
  font-size: 32px;
  font-weight: bold;
  color: #7a5f37; /* Golden brown color */
  margin-bottom: 10px;
  line-height: 1.3;
}

.divider {
  width: 50px;
  height: 2px;
  background-color: #c79f6e; /* Divider color */
  border: none;
  margin: 10px 0;
}

.description {
  font-size: 16px;
  line-height: 1.75;
  color: #555;
}

.circle-icon {
  width: 50px;
  height: 50px;
  background-color: #d99156;
  border-radius: 50%;
  color: white;
  font-size: 18px;
  font-weight: 600;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20px;
}

/* Right Image Styling */
.image-block {
  flex: 1;
  position: relative;
}

.image-wrapper {
  position: relative;
}

.section-image {
  max-width: 100%;
  border-radius: 8px;
}

.overlay {
  position: absolute;
  top: 10px;
  right: 10px;
  background-color: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 8px 15px;
  font-size: 12px;
  border-radius: 4px;
}

/* Circle Badges */
.badge-group {
  position: absolute;
  bottom: 10px;
  right: 10px;
  display: flex;
  gap: 8px;
}

.badge {
  width: 30px;
  height: 30px;
  line-height: 30px;
  background-color: #f28b2c;
  color: white;
  font-size: 14px;
  font-weight: 600;
  text-align: center;
  border-radius: 50%;
}

.badge:nth-child(2) {
  background-color: #5367ce; /* Blue */
}

.badge:nth-child(3) {
  background-color: #d04949; /* Red */
}

/* Responsive Design */
@media (max-width: 768px) {
  .container {
    flex-direction: column;
    gap: 20px;
  }

  .content-block {
    text-align: center;
  }

  .badge-group {
    right: 20px;
  }
}
{% endstylesheet %}