<section class="text-media-caorusel">
  <div class="text-media-carousel__inner">
    <div class="text-media-carousel__media-wrapper"></div>

    <div class="text-media-carousel__content-wrapper">
      <div class="text-media-carousel__content-inner">
        <h3 class="text-media-carousel__heading">{{ section.settings.heading }}</h3>

        <div class="text-media-carousel__text swiper">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              <div class="swiper-slide">
                <h2 class="swiper-slide__heading">{{ block.settings.heading }}</h2>
                <p class="swiper-slide__title">{{ block.settings.title }}</p>

                <p class="swiper-slide__quote handwriting">{{ block.settings.quote }}</p>
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Text Media Carousel",
  "settings": [
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "textarea",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "title",
          "label": "Label"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Quote"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Link text"
        },
        {
          "type": "header",
          "content": "Media"
        },
        {
          "type": "textarea",
          "id": "media_label",
          "label": "Media Label"
        },
        {
          "type": "paragraph",
          "content": "Use only one media type"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "video",
          "id": "video",
          "label": "Video Upload"
        },
        {
          "type": "video_url",
          "id": "video_url",
          "label": "Video Url",
          "accept": ["youtube", "vimeo"]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Text Media Carousel"
    }
  ]
}
{% endschema %}
