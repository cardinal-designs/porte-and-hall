{% style %}
  .image-with-text .home-banner .FeatureText{
     display:grid;
    grid-template-columns: 1fr 1fr;
    margin:0 auto;
    position:relative;
    align-items: center;  
    padding: 80px;
  }

  .image-with-text .home-banner .FeatureText .FeatureText__ContentWrapper .FeatureText__Content{
  position: relative;
    z-index: 1;
  }

 .image-with-text .home-banner .FeatureText .FeatureText__ImageWrapper{
    position:relative;
    min-height: 500px;
  }

  .image-with-text .home-banner .FeatureText .FeatureText__ContentWrapper .SectionHeader{
    padding-right: 48px;
    text-align: left;
    max-width: 572px;
    margin-left: auto;
  }

  .image-with-text .home-banner .FeatureText .FeatureText__ContentWrapper .SectionHeader__Heading p{
    font-size: 64px;
    font-weight: 500;
    line-height: 64px;
    letter-spacing: 0.02em;
    font-family: louize;
    color: #546B82;
  }
  
  .image-with-text .home-banner .FeatureText .FeatureText__ContentWrapper .SectionHeader .SectionHeader__Description p{
    color:#546B82;
    font-size: 24px;
    font-weight: 400;
    line-height: 32px;
    letter-spacing: 0.02em;
    font-family: brandon;
  }

  .image-with-text .home-banner .FeatureText .FeatureText__ContentWrapper .SectionHeader  .Link--underline{
    background: #D2B066;
    padding:16px 40px;
    color: #FFF;
    font-family: brandon;
    font-size: 16px;
    font-style: normal;
    font-weight: 500;
    line-height: 24px; /* 150% */
    letter-spacing: 1px;
    text-transform: uppercase;
    text-decoration:none;
  }
  
  .image-with-text .home-banner .FeatureText .FeatureText__ContentWrapper .SectionHeader  .Link--underline span{
    position: relative;
    top: 2px;
    margin-left: 6px;
  }

  .image-with-text .home-banner .FeatureText .FeatureText__ContentWrapper .SectionHeader .SectionHeader__Description{
    margin-bottom: 52px;
    margin-top:16px;
  }
  
  @media screen and (max-width:1100px){
    .image-with-text .home-banner .FeatureText .FeatureText__ContentWrapper .SectionHeader{
      padding: 32px 32px 47px;
    }
  }
  
  @media screen and (max-width:990px){
    .image-with-text .home-banner .FeatureText{
      grid-template-columns: 1fr;
      padding: 0;
    }
    
    .image-with-text .home-banner .FeatureText .FeatureText__ContentWrapper{
      order:2;
      margin-right: 0px;
      padding: 0 20px;
    }
    
    .image-with-text .home-banner .FeatureText .FeatureText__ImageWrapper{
      order:1;
      min-height: unset;
    }
    
    .image-with-text .home-banner .FeatureText .FeatureText__ImageWrapper .aspect-ratio{
      position: relative;
    }
    
    .image-with-text .home-banner .FeatureText .FeatureText__ContentWrapper .SectionHeader{
      padding:24px 0px 34px;
      text-align: center;
      max-width: 500px;
      margin: 0 auto;
    }
    
    .image-with-text .home-banner .FeatureText .FeatureText__ContentWrapper .SectionHeader__Heading p{
      font-size: 40px;
      font-weight: 500;
      line-height: 44px;
      letter-spacing: 0.4px;
      text-align: left;
    }
    
    .image-with-text .home-banner .FeatureText .FeatureText__ContentWrapper .SectionHeader .SectionHeader__Description p{
      font-weight: 400;
      font-family: Brandon Grotesque;
      font-size: 24px;
      line-height: 32px;
      letter-spacing: 0.02em;
      text-align: left;
    }
    
    .image-with-text .home-banner .FeatureText .FeatureText__ContentWrapper .SectionHeader .Link--underline{
      padding: 10px 34px;
    }
    
    .image-with-text .home-banner .FeatureText .FeatureText__ContentWrapper .SectionHeader .SectionHeader__Description{
      margin-bottom:38px;
      margin-top: 8px;
    }
  }
  
  @media screen and (max-width:380px){
    .image-with-text .home-banner .FeatureText .FeatureText__ContentWrapper .SectionHeader{
      padding: 24px 20px 34px;
    }
  }

  @media (min-width: 1700px) {
    .image-with-text .home-banner .FeatureText {
      grid-template-columns: 35% 65%;
    }
  }

  @media (min-width: 769px) {
    .indoor-mats-2 .FeatureText__Content a {
      width: 75%;
      display: flex;
      justify-content: center;
    }
  }
{% endstyle %}
 
 <section class="Section {{ section.settings.custom-class }}">
  {%- capture section_content -%}
    <div class="FeatureText__ContentWrapper">
      <div class="FeatureText__Content">
        {%- if section.settings.subheading != blank or section.settings.title != blank or section.settings.content != blank -%}
          <header class="SectionHeader">
            {%- if section.settings.subheading != blank -%}
              <h4 class="SectionHeader__SubHeading">{{ section.settings.subheading | escape }}</h4>
            {%- endif -%}

            {%- if section.settings.title != blank -%}
              <div class="SectionHeader__Heading">{{ section.settings.title }}</div>
            {%- endif -%}

            {%- if section.settings.content != blank -%}
              <div class="SectionHeader__Description">
                {{ section.settings.content }}
              </div>
            {%- endif -%}

            {%- if section.settings.link_text != blank -%}
              <a href="{{ section.settings.link_url }}" class="Link Link--underline">{{ section.settings.link_text | escape }}
                <span> 
                  <svg xmlns="http://www.w3.org/2000/svg" width="29" height="16" viewBox="0 0 29 16" fill="none">
                    <path d="M28.7071 8.70711C29.0976 8.31658 29.0976 7.68342 28.7071 7.29289L22.3431 0.928932C21.9526 0.538408 21.3195 0.538408 20.9289 0.928932C20.5384 1.31946 20.5384 1.95262 20.9289 2.34315L26.5858 8L20.9289 13.6569C20.5384 14.0474 20.5384 14.6805 20.9289 15.0711C21.3195 15.4616 21.9526 15.4616 22.3431 15.0711L28.7071 8.70711ZM0 9H28V7H0V9Z" fill="#FFF"/>
                  </svg>
                </span>
              </a>
            {%- endif -%}
          </header>
        {%- endif -%}
      </div>
    </div>
  {%- endcapture -%}

  {%- capture section_image -%}
    {%- if section.settings.image != blank -%}
      <div class="FeatureText__ImageWrapper">
        {% render 'lazy-image', image: section.settings.image, fade: true, classes: 'img-fill', aria-label: "hero image", heightI: 570, widthI: 900 %}   
      </div>
    {%- endif -%}
  {%- endcapture -%}

  <div class="FeatureText">
       {{- section_content -}}
      {{- section_image -}}
      

  </div>
</section>

{% schema %}
{
  "name": "Image with text 2",
  "class": "image-with-text",
  "settings": [
     {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
      "info": "1200 x 1200px .png recommended"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Sub-heading",
      "default": "Sub-heading"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "Heading",
      "default": "<p>Add Title...</p>"
    },
   
    {
      "type": "richtext",
      "id": "content",
      "label": "Text",
      "default": "<p>Add your own custom content to give more information about your store, availability details...</p>"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link text"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL"
    },
    {
      "type": "text",
      "id": "custom-class",
      "label": "custom-class"
    }
  ],
  "presets": [
    {
      "category": "Text",
      "name": "Image with text 2",
      "settings": {}
    }
  ]
}
{% endschema %}

