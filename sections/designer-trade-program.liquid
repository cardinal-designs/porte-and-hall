{{ 'designer-trade-program.css' | asset_url | stylesheet_tag: preload: true }}

{% if section.settings.heading != blank or section.settings.button_1_text != blank or section.settings.button_2_text != blank %}
  <div class="trade__program" id="section-{{ section.id }}">
    <div class="trade__image--slider"> 
      {% for block in section.blocks %}
        <div class="trade__image--item">
        </div>
      {% endfor %}
    </div>
    <div class="trade__overlay">
      <div class="trade__content">
        {% if section.settings.heading != blank %}
          <h2>{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.description != blank %}
          <p>{{ section.settings.description }}</p>
        {% endif %}
        {% if section.settings.button_1_text != blank or section.settings.button_2_text != blank %}
          <div class="trade__buttons">
            {% if section.settings.button_1_text != blank and section.settings.button_1_url != blank %}
              <a href="{{ section.settings.button_1_url }}" class="button join-btn scroll__button">
                {{ section.settings.button_1_text }}
              </a>
            {% endif %}
            {% if section.settings.button_2_text != blank and section.settings.button_2_url != blank %}
              <a href="{{ section.settings.button_2_url }}" class="button signin-btn">
                {{ section.settings.button_2_text }}
              </a>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
{% endif %}

{% style %}

  #section-{{ section.id }} {
    background-image: url({{ section.settings.background_image | image_url: width: 2000 }});
  }

  {% if section.settings.background_image != blank %}
    @media (max-width: 767px) {
      
      #section-{{ section.id }} {
        background-image: url({{ section.settings.mobile_background_image | image_url: width: 2000 }});
      }
      
    }
  {% endif %}
  
{% endstyle %}

{% schema %}
{
  "name": "Trade Program Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_background_image",
      "label": "Mobile Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Trade Program"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Porte + Hall was founded by an interior designer, so we’re thrilled to roll out the red carpet (er, mat) for our trade community—with exclusive perks and personalized support."
    },
    {
      "type": "header",
      "content": "Button 1"
    },
    {
      "type": "text",
      "id": "button_1_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button_1_url",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Button 2"
    },
    {
      "type": "text",
      "id": "button_2_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button_2_url",
      "label": "Button Link"
    },
  ],
  "presets": [
    {
      "name": "Trade Program Section"
    }
  ]
}
{% endschema %}