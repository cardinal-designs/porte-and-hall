

<div class="trade__program" style="background-image: url({{ section.settings.background_image | image_url: width: 2000 }});">
  <div class="trade__overlay">
    <div class="trade__content">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.description }}</p>
      <div class="trade__buttons">
        <a href="{{ section.settings.join_link }}" class="button join-btn">
          Become a member.
        </a>
        <a href="{{ section.settings.signin_link }}" class="button signin-btn">Sign in</a>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Trade Program Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Trade Program"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Porte + Hall was founded by an interior designer, so we’re thrilled to roll out the red carpet (er, mat) for our trade community—with exclusive perks and personalized support."
    },
    {
      "type": "url",
      "id": "join_link",
      "label": "Join Link"
    },
    {
      "type": "url",
      "id": "signin_link",
      "label": "Sign-in Link"
    }
  ],
  "presets": [
    {
      "name": "Trade Program Section"
    }
  ]
}
{% endschema %}

<style>
.trade__program {
  background-size: cover;
  background-position: center;
  min-height: 600px;
  position: relative;
  display: flex;
  align-items: center;
}

.trade__overlay {
  background: rgba(10, 40, 60, 0.7); /* navy transparent trade__overlay */
  width: 50%;
  height: 100%;
  padding: 3rem 2rem;
  display: flex;
  align-items: center;
}

.trade__content {
  color: #fff;
  max-width: 500px;
}

.trade__content h2 {
  font-size: 3rem;
  font-weight: 700;
  margin-bottom: 1rem;
}

.trade__content p {
  font-size: 1rem;
  line-height: 1.6;
  margin-bottom: 2rem;
}

.trade__buttons {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.button {
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  text-decoration: none;
  font-size: 1rem;
  padding: 1rem;
  border-radius: 6px;
  transition: all 0.3s ease;
}

.join-btn {
  background: #fff;
  color: #000;
  position: relative;
  justify-content: center;
  padding-left: 3.5rem;
}

.signin-btn {
  background: transparent;
  border: 2px solid #fff;
  color: #fff;
}
</style>