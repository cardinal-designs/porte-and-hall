{% schema %}
{
  "name": "Trade Program",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Trade Program"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Porte + Hall was founded by an interior designer, so we’re thrilled to roll out the red carpet (er, mat) for our trade community—with exclusive perks and personalized support."
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Side Image"
    },
    {
      "type": "url",
      "id": "join_link",
      "label": "Join Link"
    },
    {
      "type": "url",
      "id": "signin_link",
      "label": "Sign-in Link"
    }
  ],
  "presets": [
    {
      "name": "Trade Program Section"
    }
  ]
}
{% endschema %}

<div class="trade-program-wrapper">
  <div class="trade-left">
    <div class="trade-content">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.description }}</p>
      <div class="trade-buttons">
        <a href="{{ section.settings.join_link }}" class="btn primary">
          <span class="avatars">
            <span class="avatar red">J</span>
            <span class="avatar blue">A</span>
          </span>
          Become a member.
        </a>
        <a href="{{ section.settings.signin_link }}" class="btn secondary">Sign in</a>
      </div>
    </div>
  </div>
  <div class="trade-right">
    {% if section.settings.right_image %}
      <img src="{{ section.settings.right_image | image_url: width: 1000 }}" alt="Trade Program Image" />
    {% endif %}
  </div>
</div>

<style>
.trade-program-wrapper {
  display: flex;
  flex-wrap: wrap;
  min-height: 500px;
}

.trade-left {
  flex: 1 1 50%;
  background-color: rgba(29, 53, 87, 0.85);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 3rem 2rem;
}

.trade-content {
  max-width: 500px;
}

.trade-content h2 {
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: 1rem;
}

.trade-content p {
  font-size: 1rem;
  line-height: 1.6;
  margin-bottom: 2rem;
  color: #f0f0f0;
}

.trade-buttons {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  text-decoration: none;
  border-radius: 9999px;
  padding: 0.75rem 1.5rem;
  font-size: 1rem;
  white-space: nowrap;
}

.btn.primary {
  background: white;
  color: black;
  position: relative;
  gap: 0.5rem;
}

.btn.primary .avatars {
  display: flex;
  position: absolute;
  left: 1rem;
  gap: 0.25rem;
}

.avatar {
  width: 24px;
  height: 24px;
  border-radius: 50%;
  font-size: 0.75rem;
  color: white;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar.red {
  background-color: #E74C3C;
}

.avatar.blue {
  background-color: #3498DB;
}

.btn.secondary {
  border: 2px solid white;
  color: white;
  background: transparent;
}

.trade-right {
  flex: 1 1 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.trade-right img {
  width: 100%;
  height: auto;
  object-fit: cover;
}
</style>