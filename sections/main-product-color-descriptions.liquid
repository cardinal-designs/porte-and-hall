          <span class="blue"> | </span>

          {% comment %} Start of Judge.me code {% endcomment %}
          <div class='jdgm-widget jdgm-preview-badge' data-id='{{ product.id }}'> 
            {{ product.metafields.judgeme.badge }} 
          </div> 
          {% comment %} End of Judge.me code {% endcomment %}
          
        </div>
        {{customer }} - {{customer.b2b? }}
        {% if customer and customer.b2b? %}
          {% liquid
            assign target = product.selected_or_first_available_variant
            assign price = target.price
            assign money_price = price | money_without_trailing_zeros
            if settings.currency_code_enabled
              assign money_price = price | money_with_currency
            endif
          %}
          {% assign trade_pricing_discount_percentage = settings.trade_pricing_discount_percentage | times: 1 %}
          {% assign discount_factor = 100 | minus: trade_pricing_discount_percentage %}
          {% assign original_price = target.price | times: 100 | divided_by: discount_factor %}
