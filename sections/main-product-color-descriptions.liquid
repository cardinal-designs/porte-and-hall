              <span>{{ product.selected_or_first_available_variant.metafields.custom.last_chance_price.value | money_without_trailing_zeros }}</span>
            {% else %}
              {% render 'price', product: product, use_variant: true, show_badges: true, price_class: '' %}
            {%  endif  %}
