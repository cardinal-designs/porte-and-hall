{{ 'section-ugc-carousel.css' | asset_url | stylesheet_tag }}

<div>
  <div class="page-width">
    <div class="heading-with-accents">
      <span class="divider header-divider">
        
        <span class="divider-line"></span>
      </span>
      <div class="h2 blue">{{ section.settings.heading }}</div>
      <span class="divider header-divider"> <span class="divider-line"></span> </span>
    </div>
  </div>

  {%  if section.blocks != blank %}
  <ugc-carousel>
    <div class="ugc-carousel__container swiper" id="{{ section.id }}-ugc-carousel">
      <div class="swiper-pagination ugc-carousel__pagination"></div>
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            <div class="ugc-carousel__item">
              {{ block.settings.image | image_url: width: 400 | image_tag }}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </ugc-carousel>
  {% endif %}

  <div id="insta-feed"></div>
</div>

{% schema %}
{
  "name": "UGC Carousel",
  "tag": "section",
  "class": "ugc-carousel with-spacing",
  "settings": [
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "post",
      "name": "Post",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "UGC Carousel"
    }
  ]
}
{% endschema %}

<style>
  .shopify-section.ugc-carousel>div:first-of-type{
    padding-top: 80px;
    padding-bottom: 65px;
  }
  .ugc-carousel .heading-with-accents p{
    font-size: 40px;
    font-weight: 500;
    line-height: 62px;
    letter-spacing: 1.6px;
  }
  .ugc-carousel .heading-with-accents p a{
    position:relative;
  }
  .ugc-carousel .heading-with-accents p a:after{
    content:"";
    position:absolute;
    bottom: 4px;
    width: 100%;
    height: 1px;
    background: currentColor;
    right: 0px;
  }
  .ugc-carousel .heading-with-accents{
        column-gap: 40px;
    margin: 0 -40px 80px;
    width: calc(100% + 80px);
  }
  .ugc-carousel .heading-with-accents .divider-line{
    background: #D2B066;
    height: 3px;
  }
  #insta-feed{
    max-width: 1220px;
    padding: 0 20px;
  }
  #insta-feed>a{
    display: inline-block;
    width: 33.33%;
  }
  #insta-feed .instafeed-container{
    width: 100% !important;
    padding-top: 100% !important;
  }

  #insta-feed>a{
    display:none;
  }
  #insta-feed>a:nth-child(1){
    display: inline-block;

  }

  @media (max-width:1439px){
    .ugc-carousel .heading-with-accents{
      margin: 0 0px 80px;
      width: calc(100% + 0px);
    }
  }
  @media (max-width:1025px){
    .shopify-section.ugc-carousel>div:first-of-type{
      padding-top: 56px;
      padding-bottom: 46px;
    }
    .ugc-carousel .heading-with-accents{
      margin-bottom:56px;
    }
  }
  @media (max-width:768px){
    .ugc-carousel .heading-with-accents{
      column-gap:16px;
      grid-template-columns: 1fr auto 1fr;

    }
    .shopify-section.ugc-carousel>div:first-of-type{
      padding-top: 40px;
      padding-bottom: 30px;
    }
    .ugc-carousel .heading-with-accents{
      margin-bottom:32px;
    }
    .ugc-carousel .heading-with-accents .divider-line{
      height:2px;
    }
    .ugc-carousel .heading-with-accents p{
      font-size: 24px;
      font-style: normal;
      font-weight: 500;
      line-height: 32px;
      letter-spacing: 0.48px;
    }
    .ugc-carousel .heading-with-accents .h2{
      padding-bottom:0px;
    }
  }
  @media (max-width:766px){
    #insta-feed>a{
      width: 50%;
    }
  }
</style>

