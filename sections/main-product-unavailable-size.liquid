{% comment %}theme-check-disable TemplateLength{% endcomment %}
{{ 'section-main-product.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}
{{ 'component-rte.css' | asset_url | stylesheet_tag }}
<script src="{{ 'product-error.js' | asset_url }}" defer="defer"></script>

{% style %}
  square-placement {
    margin-bottom: 0 !important;
    margin-top: 10px !important;
  }

  @media (max-width: 768px) {
    square-placement {
      text-align: center !important;
    }
  }
{% endstyle %}

{% liquid
  assign product_prefix = product.title | split: '-' | first | strip
  for collection in product.collections
    if collection.title  == product_prefix
      assign grouped_collection = collection
    endif
  endfor

  assign oos_products = grouped_collection.products | where: 'available', false
  assign oos_products = ""
  assign color_label = 'color,colour,couleur,colore,farbe,색,色,färg,farve,style' | split: ','
%}

{% capture color_swatch_list %}
  {% assign all_colors_string = '' %}
  {% assign current_size = product.options_by_name['Size'].selected_value | default: product.options_by_name['size'].selected_value | downcase %}

  {% assign size_handle = current_size | handle %}

  {% paginate grouped_collection.products by 100 %}
    {% for swatch in grouped_collection.products %}
      {% for option in swatch.options_with_values %}
        {% assign option_name = option.name | downcase %}
        {% if color_label contains option_name or option_name == 'style' %}
          {% for value in option.values %}
            {% assign val_handle = value | handle %}
            {% unless all_colors_string contains val_handle %}
              {% assign all_colors_string = all_colors_string | append: value | append: ',' %}
            {% endunless %}
          {% endfor %}
        {% endif %}
      {% endfor %}
    {% endfor %}
  {% endpaginate %}
  

  {% assign all_colors = all_colors_string | split: ',' | uniq %}
  {% for color in all_colors %}
    {% if color != blank %}
      {% assign color_handle = color | handle %}
      {% assign matched_product = blank %}
      {% assign product_available = false %}

      {%- paginate grouped_collection.products by 100 -%}
        {% for prod in grouped_collection.products %}
          {% assign prod_title = prod.title %}
          {% assign prod_handle = prod.handle %}
          {% assign prod_parts = prod_title | split: '/' | last | strip | downcase | replace: ' x ', 'x' | replace: ' ', '' %}
          {% assign size_parts = size_handle
            | downcase
            | replace: '-', ''
          %}
          {% assign matched_size = false %}

            {% if prod_parts == size_parts %}
              {% assign matched_size = true %}
            {% endif %}

          {% if prod_handle contains color_handle and matched_size %}
            {% assign matched_product = prod %}
            {% if prod.available %}
              {% assign product_available = true %}
            {% endif %}
          {% endif %}
        {% endfor %}
      {%- endpaginate -%}
      

      {% assign is_active = false %}
      {% if product.handle contains color_handle %}
        {% assign is_active = true %}
      {% endif %}

      {% assign element_classes = 'product__swatch' %}
      {% if is_active %}
        {% assign element_classes = element_classes | append: ' product__active-swatch' %}
      {% endif %}
      {% unless product_available %}
        {% assign element_classes = element_classes | append: ' product__oos-swatch' %}
      {% endunless %}

      {% assign swatch_file_name = color | handle | append: '.png' %}

      {% if matched_product != blank %}
        <a 
          href="{{ matched_product.url | append: '?view=unavailable-sizes' }}" 
          class="{{ element_classes }}" 
          data-tooltip="{{ color | escape }}"
          style="{% unless product_available %}cursor: pointer;{% endunless %}"
        >
          <span style="background-image: url({{ swatch_file_name | file_img_url: '60x60' }});"></span>
        </a>
      {% else %}
        <span 
          class="{{ element_classes }} product__color-swatch--not-available" 
          data-tooltip="{{ color | escape }}"
          data-color-handle="{{ color | handle }}"
        >
          <span style="background-image: url({{ swatch_file_name | file_img_url: '60x60' }});"></span>
        </span>
      {% endif %}
    {% endif %}
  {% endfor %}
{% endcapture %}
  
<section class="page-width">
  <div class="product">
    <a class="skip-to-content-link button visually-hidden" href="#ProductInfo-{{ section.id }}">
      {{ 'accessibility.skip_to_product_info' | t }}
    </a>

    <div class="product__media-wrapper">
      <ul class="hide-mobile product__media-thumbnails list-unstyled swiper" role="list">
        <div class="swiper-wrapper">
          {% for media in product.media %}
            {% unless media.alt == 'hide-outlier' %}
            <li class="product__media-thumbnail-item swiper-slide" data-media-id="{{ section.id }}-{{ media.id }}">
              {% render 'product-media', media: media, position: forloop.index, width: '106' %}
            </li>
          {% endunless %}
          {% endfor %}
        </div>
      </ul>

      <ul class="product__media-list list-unstyled swiper" role="list">
        <div class="swiper-wrapper">
          {% for media in product.media %}
            {% unless media.alt == 'hide-outlier' %}
            <li class="product__media-item swiper-slide" data-media-id="{{ section.id }}-{{ media.id }}">
              {% render 'product-media', media: media, position: forloop.index %}
              <div class="product__media-buttons">
                {% unless section.settings.hide_pinterest == true %}
                  {% render 'pin-button', media: media %}
                {% endunless %}
                {% render 'zoom-button' %}
              </div>
            </li>
            {% endunless %}
          {% endfor %}
        </div>
        <div class="product__media-pagination swiper-pagination hide-desktop"></div>
        <div class="product__media-button swiper-button-prev hide-desktop"></div>
        <div class="product__media-button swiper-button-next hide-desktop"></div>
      </ul>
    </div>

    <div class="product__info-wrapper">
      <div id="ProductInfo-{{ section.id }}" class="product__info-container">
        {% assign product_form_id = 'product-form-' | append: section.id %}

        <h3 class="product__tag gray">
          {{ product.variants.first.metafields.filters.use.value.first }}
        </h3>

        {%- liquid
          for collection in product.collections
            if collection.title contains ' |'
              assign grouped_size_collection = collection
            endif
          endfor
        -%}

        <h1 class="product__title blue">
          {% if product.title contains 'Porter' %}
            The Porter Mat
          {% elsif grouped_size_collection.title contains '5 x 7 Area Mat' %}
            The Innerweave Area Mat
          {% else %}
          {{ grouped_size_collection.title | remove: ' |' | default: product.title }}
          {% endif %}
        </h1>

        <div class="product__price-reviews-wrapper">
          <div class="no-js-hidden product__price" id="price-{{ section.id }}" role="status">
            {% if product.selected_or_first_available_variant.metafields.custom.last_chance_price.value != blank and product.price > product.selected_or_first_available_variant.metafields.custom.last_chance_price.value %}
              <span class="old-price">{{ product.price | money_without_trailing_zeros }}</span>
              <span>{{ product.selected_or_first_available_variant.metafields.custom.last_chance_price.value | money_without_trailing_zeros }}</span>
            {% else %}
              {% render 'price', product: product, use_variant: true, show_badges: true, price_class: '' %}
            {%  endif  %}
          </div>

          <span class="blue"> | </span>

          {% comment %} Start of Judge.me code {% endcomment %}
          <div class='jdgm-widget jdgm-preview-badge' data-id='{{ product.id }}'> 
            {{ product.metafields.judgeme.badge }} 
          </div> 
          {% comment %} End of Judge.me code {% endcomment %}
          
        </div>

        {% if customer and customer.b2b? %}
          {% liquid
            assign target = product.selected_or_first_available_variant
            assign price = target.price
            assign money_price = price | money_without_trailing_zeros
            if settings.currency_code_enabled
              assign money_price = price | money_with_currency
            endif
          %}
          {% assign original_price = product.selected_or_first_available_variant.metafields.custom.variant_original_sale_price | times: 100 %}
          {% if original_price > 0 %}
            {% assign discountAmout = original_price | minus: price | times: 100 | divided_by: original_price | round %}
            <div class="product__trade--price">
              <div class="price">
                <div class="h3">
                  <div class="price__regular">
                    <span class="price-item price-item--regular">
                      {{ money_price }} <span>Trade <span>(save {{ discountAmout }}%)</span></span>
                    </span>
                  </div>
                </div>
              </div>
            </div>
          {% endif %}
        {% endif %}

        {% if grouped_size_collection.metafields.custom.short_description != blank or product.description != blank %}
          <div class="product__description 123 body blue">
            {{ grouped_size_collection.metafields.custom.short_description | default: product.description }}
          </div>
        {% endif %}

        {% unless section.settings.hide_dimensions == true %}
          <div class="product__dimensions--wrapper">
            <div class="dimensions__button">
              {%- render 'icon' with 'ruler' -%}
              <p>Need help finding the right dimension?</p>
              <div id="btnhomeModal" class="button">see dimensions</div>
            </div>
          </div>
        {% endunless %}

        {% if section.settings.text_dimensions == true %}
          <p id="btnhomeModal2" class="body"><span>Dimensions:</span> <u>view here</u></p>
        {% endif %}

        <div id="myModal" class="dimension-modal-content dimension_modal">
              <div class="dimension-modal-header">
                  <h6>{{ grouped_size_collection.title | remove: ' |' | default: product.title }}</h6>
                <div class="cancel-button close">
                  <button class="cancel-icon">{% render 'icon' with 'close-circle' %}
                  </button>
                </div>
              </div>
              <div class="dimension-modal-body">
                <p>{{ product.metafields.custom.product_dimensions.value.dimension }}</p>
                <img src="{{ product.metafields.custom.product_dimensions.value.dimension_image | img_url:'original' }}" alt="Dimension Image">
              </div> 
        </div>

        {% for option in product.options_with_values %}
          <div class="product__variant-name body">
            {% if option.name == 'Size' %}
              {% continue %}
            {% endif %}

            <span>
              {%- if option.name == 'Color' or option.name == 'color' -%}
                {%- if product.title contains 'Outlier' or product.title contains 'Outsider' -%}
                  {{ option.name }}
                {% else %}
                  Style
                {%- endif -%}
              {%- else -%}
                  {{ option.name }}
              {%- endif -%}
            </span>
            <span> — {{ option.selected_value }}</span>
          </div>
        {% endfor %}

        {% if product.metafields.custom.style_text != blank %}
        <p class="style-text__color">{{ product.metafields.custom.style_text }}</p>
        {% endif %}

        <div id="active-color" 
          data-color="{{ product.options_by_name['Color'].selected_value | default: product.options_by_name['Style'].selected_value }}">
        </div>

        <div class="product__swatches">
          {{ color_swatch_list }}
        </div>

        <product-form class="product-form">
          <div class="product-form__error-message-wrapper" role="alert" hidden>
            {%- render 'icon', icon: 'error' -%}
            <span class="product-form__error-message"></span>
          </div>

          {% form 'product',
            product,
            id: product_form_id,
            class: 'form',
            novalidate: 'novalidate',
            data-type: 'add-to-cart-form'
          %}
            <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">

            {% unless product.has_only_default_variant %}
              {% assign picker_type = 'button' %}
              {% if picker_type == 'button' %}
                <variant-radios
                  class="no-js-hidden visually-hidden"
                  data-section="{{ section.id }}"
                  data-url="{{ product.url }}"
                >
                  {% for option in product.options_with_values %}
                    <fieldset class="js product-form__input">
                      <legend class="form__label">{{ option.name }}</legend>
                      {% for value in option.values %}
                        <input
                          type="radio"
                          id="{{ section.id }}-{{ option.position }}-{{ forloop.index0 }}"
                          name="{{ option.name }}"
                          value="{{ value | escape }}"
                          form="{{ product_form_id }}"
                          {% if option.selected_value == value %}
                            checked
                          {% endif %}
                        >
                        <label for="{{ section.id }}-{{ option.position }}-{{ forloop.index0 }}">
                          {{ value }}
                        </label>
                      {% endfor %}
                    </fieldset>
                  {% endfor %}
                  <script type="application/json">
                    {{ product.variants | json }}
                  </script>
                </variant-radios>
              {% else %}
                <variant-selects
                  class="no-js-hidden visually-hidden"
                  data-section="{{ section.id }}"
                  data-url="{{ product.url }}"
                >
                  {% for option in product.options_with_values %}
                    <div class="product-form__input product-form__input--dropdown">
                      <label class="form__label" for="Option-{{ section.id }}-{{ forloop.index0 }}">
                        {{ option.name }}
                      </label>
                      <div class="select">
                        <select
                          id="Option-{{ section.id }}-{{ forloop.index0 }}"
                          class="select__select"
                          name="options[{{ option.name | escape }}]"
                          form="{{ product_form_id }}"
                        >
                          {% for value in option.values %}
                            <option
                              value="{{ value | escape }}"
                              {% if option.selected_value == value %}
                                selected="selected"
                              {% endif %}
                            >
                              {{ value }}
                            </option>
                          {% endfor %}
                        </select>
                        {% render 'icon', icon: 'caret' %}
                      </div>
                    </div>
                  {% endfor %}

                  <script type="application/json">
                    {{ product.variants | json }}
                  </script>
                </variant-selects>
              {% endif %}
            {% endunless %}

            <noscript class="product-form__noscript-wrapper-{{ section.id }}">
              <div class="product-form__input{% if product.has_only_default_variant %} hidden{% endif %}">
                <label class="form__label" for="Variants-{{ section.id }}">
                  {{- 'products.product.product_variants' | t -}}
                </label>
                <div class="select">
                  <select name="id" id="Variants-{{ section.id }}" class="select__select" form="{{ product_form_id }}">
                    {% for variant in product.variants %}
                      <option
                        {% if variant == product.selected_or_first_available_variant %}
                          selected="selected"
                        {% endif %}
                        {% if variant.available == false %}
                          disabled
                        {% endif %}
                        value="{{ variant.id }}"
                      >
                        {{ variant.title }}
                        {% if variant.available == false %} - {{ 'products.product.sold_out' | t }}{% endif %}
                        - {{ variant.price | money | strip_html }}
                      </option>
                    {% endfor %}
                  </select>
                  {% render 'icon', icon: 'caret' %}
                </div>
              </div>
            </noscript>

          
               <!-- Shop Other Sizes -->
            {% liquid
              assign product_type = grouped_collection.title | remove: 'The ' | split: ' | '
              assign active_style = product.selected_or_first_available_variant.title
              assign product_size = product.options_by_name['size'].values[0]
              assign active_style = active_style | remove: product_size | remove: " / " 
              assign other_sizes = grouped_collection.metafields.custom.other_sizes.value
            %}

            <span data-active-style="{{ active_style }}"></span>

            {% if other_sizes != blank and section.settings.shop_more_below != true %}
              {% capture other_size_links %}
                {% for block in other_sizes %}
                  {% assign current_size = block.title | split: " | " %}
                  {% assign format_color = "- " | append: active_style | append: " /" %}
                  {%  assign match_name = block.title | replace: "|", format_color %}
                  {%  assign match = block.products | where: 'title', match_name %}
                  {% if match != blank %}
                    <a class="inline-link" href="{{ match.first.url }}?view=unavailable-sizes">{{ current_size.last }}</a> <span class="other-size__divider">or</span>
                  {% endif %}
                {% endfor %}
              {%  endcapture %}

              {% unless section.settings.hide_shop_other == true %}
                {% unless other_size_links == blank %}
                  <div class="other-sizes__wrapper">
                    <span>Also available in:</span> {{ other_size_links }}
                  </div>
                {% endunless %}
              {% endunless %}
            {% endif %}

            {% if product.metafields.custom.restock_date != blank %}
              <p class="product__restock-note body">{{ product.metafields.custom.restock_date }}</p>
            {% endif %}

            {% for block in other_sizes %} 
              {%- assign current_size = block.title | split: " | " -%}
              {%- assign format_color = "- " | append: active_style | append: " /" -%}
              {%- assign match_name = block.title | replace: "|",  format_color -%}
              {%- assign match = block.products | where: 'title', match_name -%}
            {% endfor %}

            {%- if other_sizes != blank and section.settings.shop_more_below == true -%}
              {%- capture other_size_links -%}
                {%- comment -%} Current Product Size {%- endcomment -%}
                  {% assign active_order = '' %}
                  {% if product.handle contains 'doormat' %}
                    {% assign active_order = 1 %}
                  {% elsif product.handle contains 'xl-runner' %}
                    {% assign active_order = 3 %}
                  {% elsif product.handle contains 'runner' %}
                    {% assign active_order = 2 %}
                  {% elsif product.handle contains 'area-mat-5x7' %}
                    {% assign active_order = 7 %}
                  {% elsif product.handle contains 'area-mat' %}
                    {% assign active_order = 4 %}
                   {% elsif product.handle contains 'standard' %}
                    {% assign active_order = 5 %}
                  {% elsif product.handle contains 'double' %}
                    {% assign active_order = 6 %}
                  {% endif %}

                <a 
                  style="order: {{ active_order }};"
                  class="small_button_text other-sizes__button active {% if product.available == false %} other-sizes__button--out-of-stock {% endif %}" 
                  href="{{ product.url }}?view=unavailable-sizes"
                >
                  {% if product_size == '5 x 7 Area Mat' %}
                    <span>Area Mat</span>
                  {% else %}
                    <span>{{ product_size }}</span>
                  {% endif %}

                  {% if product_size == 'Doormat' %}
                    {% if product.handle contains 'innerweave' %}
                      <span class="other-sizes__dimension">2' x 3'</span>
                    {% else %}
                      <span class="other-sizes__dimension">2' 3" x 3'</span>
                    {% endif %}
                  {% elsif product_size == 'XL Runner' %}
                     <span class="other-sizes__dimension">2' 3" x 8' 6"</span>
                  {% elsif product_size == 'Runner' %}
                    {% if product.handle contains 'innerweave' %}
                      <span class="other-sizes__dimension">2' 5" x 6' 5"</span>
                    {% else %}
                      <span class="other-sizes__dimension">2' 3" x 6' 7"</span>
                    {% endif %}
                  {% elsif product_size == '5 x 7 Area Mat' %}
                    <span class="other-sizes__dimension">5' x 7'</span>
                  {% elsif product_size == 'Area Mat' %}
                    {% if product.handle contains 'innerweave' %}
                      <span class="other-sizes__dimension">4' x 6'</span>
                    {% else %}
                      <span class="other-sizes__dimension">4' 6" x 6' 6"</span>
                    {% endif %}  
                  {% elsif current_size.last == 'Standard' %}
                    <span class="other-sizes__dimension">36” x 72”</span>
                  {% elsif current_size.last == 'Double' %}
                    <span class="other-sizes__dimension">30” x 48”</span>
                  {% endif %}

                  {%- if product.available == false -%}
                    <svg class="slash" viewBox="0 0 100 100" preserveAspectRatio="none">
                      <line x1="0" y1="100" x2="100" y2="0" />
                    </svg>
                  {%- endif -%}
                </a>

                {%- comment -%} Other Sizes {%- endcomment -%}
                {%- for block in other_sizes -%}
                  {%- assign current_size = block.title | split: " | " -%}
                  {%- assign format_color = "- " | append: active_style | append: " /" -%}
                  {%- assign match_name = block.title | replace: "|",  format_color -%}
                  {%- assign match = block.products | where: 'title', match_name -%}
          
                   {%- unless product_size == current_size[1] -%}
                      <a 
                        style="order: {% if current_size[1] == 'Doormat' %}1{% elsif current_size[1] == 'Runner'  %}2{% elsif current_size[1] == 'XL Runner'  %}3{% elsif current_size[1] == 'Area Mat'  %}4{% elsif current_size[1] == 'Standard'  %}5{% elsif current_size[1] == 'Double'  %}6{% elsif current_size[1] == '5 x 7 Area Mat'  %}7{% endif %} ;"
                        class="small_button_text other-sizes__button {% if match == blank %}other-sizes__button--not-available{% endif %}{% if match.first.available == false %} other-sizes__button--out-of-stock {% endif %}"
                        data-size="{{ current_size.last }}" data-size-handle="{{ current_size.last | handle }}"
                        {% if match != blank %} href="{{ match.first.url }}?view=unavailable-sizes" {% endif %}
                        
                      >
                        {% if current_size.last == '5 x 7 Area Mat' %}
                          <span>Area Mat</span>
                        {% else %}
                          <span>{{ current_size.last }}</span>
                        {% endif %}

                        {% if current_size.last == 'Doormat' %}
                          {% if current_size.first == 'The Innerweave' %}
                            <span class="other-sizes__dimension">2' x 3'</span>
                          {% else %}
                            <span class="other-sizes__dimension">2' 3" x 3'</span>
                          {% endif %}
                        {% elsif current_size.last == 'XL Runner' %}
                          <span class="other-sizes__dimension">2' 3" x 8' 6"</span>
                        {% elsif current_size.last == 'Runner' %}
                          {% if current_size.first == 'The Innerweave' %}
                            <span class="other-sizes__dimension">2' 5" x 6' 5"</span>
                          {% else %}
                            <span class="other-sizes__dimension">2' 3" x 6' 7"</span>
                          {% endif %}
                        {% elsif current_size.last == '5 x 7 Area Mat' %}
                          <span class="other-sizes__dimension">5' x 7'</span>
                        {% elsif current_size.last == 'Area Mat' %}
                          {% if current_size.first == 'The Innerweave' %}
                            <span class="other-sizes__dimension">4' x 6'</span>
                          {% else %}
                            <span class="other-sizes__dimension">4' 6" x 6' 6"</span>
                          {% endif %}
                        {% elsif current_size.last == 'Standard' %}
                          <span class="other-sizes__dimension">30” x 48”</span>
                        {% elsif current_size.last == 'Double' %}
                          <span class="other-sizes__dimension">36” x 72”</span>
                        {% endif %}

                        {%- if match.first.available == false -%}
                          <svg class="slash" viewBox="0 0 100 100" preserveAspectRatio="none">
                            <line x1="0" y1="100" x2="100" y2="0" />
                          </svg>
                        {%- endif -%}
                      </a>      
                   {%- endunless -%}

                  
                {%- endfor -%}
              {%- endcapture -%}


              {%- unless section.settings.hide_shop_other == true -%}
                {%- unless other_size_links == blank -%}
                  <div class="other-sizes__wrapper other-sizes__wrapper--other-collections">
                    <span class="other-sizes__label">Size</span> 
                    <div class="5 other-sizes__wrapper-links 5 other-sizes__wrapper-links--inner">
                      {{ other_size_links }}
                    </div>
                  </div>
                {%- endunless -%}
              {%- endunless -%}
            {%- elsif product.type == 'Outlier' and section.settings.shop_more_below == true  -%}  
              {%- capture other_size_links -%}
                <a 
                  class="other-sizes__button active" 
                  href="{{ product.url }}?view=unavailable-sizes"
                >
                  <span>{{ product_size }}</span>
                  <span class="other-sizes__dimension">21" x 36"</span>
                </a>
              {%- endcapture -%}
                 {%- unless other_size_links == blank -%}
                  <div class="other-sizes__wrapper other-sizes__wrapper--other-collections">
                    <span class="other-sizes__label">Size</span> 
                    <div class="6 other-sizes__wrapper-links">
                      {{ other_size_links }}
                    </div>
                  </div>
                {%- endunless -%}
            {%- endif -%}

            
            <product-error class="product-error product-error--column">
              <span class="product-error__message"></span>
              <a class="product-error__link"></a>
            </product-error>

            <div class="product__quantity-atc-wrapper  {% if product.available == false %}bis-styles{% endif %} {% if section.settings.hide_quantity == true %}no-quant__button{% endif %}">
              <div class="product-form__input product-form__quantity {% if product.available == false or section.settings.hide_quantity == true %}visually-hidden{% endif%}">
                <label class="form__label visually-hidden" for="Quantity-{{ section.id }}">
                  {{ 'products.product.quantity.label' | t }}
                </label>
                <quantity-input class="quantity">
                  <button class="quantity__button no-js-hidden" name="minus" type="button">
                    <span class="visually-hidden">
                      {{- 'products.product.quantity.decrease' | t: product: product.title | escape -}}
                    </span>
