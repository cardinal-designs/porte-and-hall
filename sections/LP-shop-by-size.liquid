{% style %}
  .LP-shop-by-size .page-width{
    padding: 56px 40px;
  }

  .column-wrap {
    display: flex;
  }

  .column-wrap .right-side {
    display: grid;
    gap: 12px;
  }

  .LP-shop-by-size .icon-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 32px;
  }
  
  .LP-shop-by-size .icon-text-content {
    background: #EEEFEF;
    display: flex;
    align-items: center;
    
    height: 120px;
  }
  .LP-shop-by-size .icon-type{
    height: 100%;
    display: flex;
    width: 90px;
    padding: 10px;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background: #546B82;
  }
  .LP-shop-by-size .icon-type .type-1{
    border: 2px solid #D1BD93;
    height: 33px;
    width: 46px;
  }
  .LP-shop-by-size .icon-type .type-2{
    width: 61px;
    height: 91.5px;
    border: 2px solid #D1BD93;
  }
  .LP-shop-by-size .icon-type .type-3{
    width: 37px;
    height: 98px;
    border: 2px solid #D1BD93;
  }
  .LP-shop-by-size .icon-text-content p{
    color: #546B82;
    text-align: center;
    font-size: 14px;
    font-weight: 500;
    line-height: 20px;
    letter-spacing: 0.28px;
    padding: 10px 20px 10px 12px;
    min-width: 144px;
  }

  .LP-shop-by-size .icon-text-content a{
    display: flex;
    height: 100%;
    width: 100%;
    align-items: center;
  }
  
  @media (max-width:760px){
    .LP-shop-by-size .page-width{
      padding: 40px 17px;
    }
    .LP-shop-by-size .icon-text-content{
      flex-direction: column;
      width: 104px;
    }
    .LP-shop-by-size .icon-text-content a{
      flex-direction: column;
    }
    .LP-shop-by-size .icon-type{
      width: 100%;
      height: 80px;
    }
    .LP-shop-by-size .icon-text-content p{
      font-size: 13px;
      line-height: 20px;
      letter-spacing: 0.26px;
      padding:10px 8px;
      min-width:unset;
      width: 100%;
    }
    .LP-shop-by-size .icon-type .type-1{
      height: 27.391px;
      width: 42px;
    }
    .LP-shop-by-size .icon-type .type-2{
      width: 42.333px;
      height: 63.5px;
    }
    .LP-shop-by-size .icon-type .type-3{
      width: 26.429px;
      height: 70px;
    }
  }  
{% endstyle %}

<div class="page-width">
  {%- if section.settings.title != blank or section.settings.content != blank -%}
    <header class="SectionHeader text-center">
      {%- if section.settings.title != blank -%}
        <h2 class="SectionHeader__Heading">{{ section.settings.title }}</h2>
      {%- endif -%}
      {%- if section.settings.link_text != blank -%}
        <div class="link-text">
          <a href="{{ section.settings.link_url }}" class="text-link gold-secondary--dark">
            {{- section.settings.link_text | escape -}}
          </a>
        </div>
      {%- endif -%}
    </header>
  {%- endif -%}
  
  <div class="icon-wrapper">

    {%- for block in section.blocks -%}
      <div class="column-wrap">
        {{ block.settings.column_image | image_url: width: 900 | image_tag: width: '100%' }}

        <div class="right-side">
          <div class="icon-text-content ">
            <a href="{{ block.settings.block_url_1 }}">
              <div class="icon-type">
                  <span class="type-1"></span>
              </div>
              <div class="icon_text">
                <p class="type">{{ block.settings.block_type_1 }}</p>
                <p class="size">{{ block.settings.block_size_1 }}</p>
              </div>
            </a>
          </div>
        
          <div class="icon-text-content ">
            <a href="{{ block.settings.block_url_2 }}">
              <div class="icon-type">
                  <span class="type-2"></span>
              </div>
              <div class="icon_text">
                <p class="type">{{ block.settings.block_type_2 }}</p>
                <p class="size">{{ block.settings.block_size_2 }}</p>
              </div>
            </a>
          </div>      
    
          <div class="icon-text-content ">
            <a href="{{ block.settings.block_url_3 }}">
              <div class="icon-type">
                  <span class="type-3"></span>
              </div>
              <div class="icon_text">
                <p class="type">{{ block.settings.block_type_3 }}</p>
                <p class="size">{{ block.settings.block_size_3 }}</p>
              </div>
            </a>
          </div>            
        </div>
      </div>
    {% endfor %}
    
    {% comment %}
    {%- for block in section.blocks -%}
      <div class="icon-text-content ">
        <a href="{{ block.settings.link }}">
          <div class="icon-type">
            {%- if block.settings.icon_type == 'left' -%}
              <span class="type-1"></span>
            {%- elsif block.settings.icon_type == 'right' -%}
              <span class="type-2"></span>
            {%- else -%}
              <span class="type-3"></span>
            {%- endif -%}
          </div>
          <div class="icon_text">
            <p class="type">{{ block.settings.block_type }}</p>
            <p class="size">{{ block.settings.block_size }}</p>
          </div>
        </a>
      </div>
    {% endfor %}
    {% endcomment %}
    
  </div>
</div>

