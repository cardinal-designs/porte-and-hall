{{ 'section-video-text.css' | asset_url | stylesheet_tag }}
 
 <section class="Section {{ section.settings.custom-class }} video-text" id="VideoText-{{ section.id }}">
  {%- capture css_variables -%}
    --title_fz: {{ section.settings.title_font_size }}px;
    --content_fz: {{ section.settings.content_font_size }}px;
    --content_fz_mb: {{ section.settings.content_font_size_mb }}px;
  {%- endcapture -%}

  {%- capture section_content -%}
    <div class="FeatureText__ContentWrapper{% if section.settings.content_full_width %} FeatureText__ContentWrapper--full-width{% endif %}" style="{{- css_variables | strip_newlines -}}">
      <div class="FeatureText__Content">
        {%- if section.settings.subheading != blank or section.settings.title != blank or section.settings.content != blank -%}
          <header class="SectionHeader">
            {%- if section.settings.subheading != blank -%}
              <h4 class="SectionHeader__SubHeading">{{ section.settings.subheading }}</h4>
            {%- endif -%}

            {%- if section.settings.title != blank -%}
              <div class="SectionHeader__Heading">{{ section.settings.title }}</div>
            {%- endif -%}

            {%- if section.settings.content != blank -%}
              <div class="SectionHeader__Description">
                {{ section.settings.content }}
              </div>
            {%- endif -%}

            {%- if section.settings.link_text != blank -%}
              <a href="{{ section.settings.link_url }}" class="Link Link--underline button-{{ section.settings.button_style }}">{{ section.settings.link_text | escape }}</a>
            {%- endif -%}
          </header>
        {%- endif -%}
      </div>
    </div>
  {%- endcapture -%}

  {%- capture section_image -%}
    {%- if section.settings.video != blank -%}
      {% liquid
        assign has_mobile_video = false
        if section.settings.mobile_video != blank and section.settings.mobile_video.id != section.settings.video.id
          assign has_mobile_video = true
        endif

        assign classes = 'videos'
        if has_mobile_video
          assign classes = 'videos hide-mobile'
        endif
        
        assign poster_url = section.settings.video_poster | image_url: width: 1920
      %}
      <div class="FeatureText__ImageWrapper video-wrapper">
        {% capture desktop_video %}
          {{ section.settings.video | video_tag: autoplay: true, muted: true, loop: true, controls: false, playsinline: true, preload: 'auto', class: classes, id: 'video', image_size: '800x', poster: poster_url }}
        {% endcapture %}
        {{ desktop_video | replace: '<video', '<video data-hero-video fetchpriority="high"' }}
        
        {% if has_mobile_video %}
          {% capture mobile_video %}
            {{ section.settings.mobile_video | video_tag: autoplay: true, muted: true, loop: true, controls: false, playsinline: true, preload: 'auto', class: 'videos hide-desktop', id: 'video-mobile', image_size: '800x', poster: poster_url }}
          {% endcapture %}
          {{ mobile_video | replace: '<video', '<video data-hero-video fetchpriority="high"' }}
        {% endif %}
      </div>
    {%- endif -%}
  {%- endcapture -%}

  <div class="FeatureText hero-video-section{% if section.settings.media_first %} media-first{% endif %}">
      {{- section_content -}}
      {{- section_image -}}
  </div>
</section>

