      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/"
    }
  ],
  "presets": [
    {
      "name": "Colorways",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}