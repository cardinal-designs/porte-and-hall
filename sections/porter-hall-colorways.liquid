<section class="colorways-section">
  <div class="content-wrapper">
    <!-- Section Title -->
    <h2 class="section-title">{{ section.settings.title }}</h2>

    <!-- Colorways Grid -->
    <div class="colorways-grid">
      <!-- Colorway 1 -->
      <div class="colorway-item">
        <img src="{{ section.settings.image_1 | image_url }}" alt="{{ section.settings.image_1_alt }}" class="colorway-image" />
        <h3 class="colorway-name">{{ section.settings.color_name_1 }}</h3>
        <p class="colorway-size">size: {{ section.settings.color_size_1 }}</p>
        <p class="colorway-note">{{ section.settings.color_note_1 }}</p>
      </div>

      <!-- Colorway 2 -->
      <div class="colorway-item">
        <img src="{{ section.settings.image_2 | image_url }}" alt="{{ section.settings.image_2_alt }}" class="colorway-image" />
        <h3 class="colorway-name">{{ section.settings.color_name_2 }}</h3>
        <p class="colorway-size">size: {{ section.settings.color_size_2 }}</p>
        <p class="colorway-note">{{ section.settings.color_note_2 }}</p>
      </div>

      <!-- Colorway 3 -->
      <div class="colorway-item">
        <img src="{{ section.settings.image_3 | image_url }}" alt="{{ section.settings.image_3_alt }}" class="colorway-image" />
        <h3 class="colorway-name">{{ section.settings.color_name_3 }}</h3>
        <p class="colorway-size">size: {{ section.settings.color_size_3 }}</p>
        <p class="colorway-note">{{ section.settings.color_note_3 }}</p>
      </div>
    </div>

    <!-- Shop Now Button -->
    <div class="shop-now">
      <a href="{{ section.settings.button_link }}" class="shop-now-button">{{ section.settings.button_text }}</a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Colorways Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "3 Elegant Colorways"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1"
    },
    {
      "type": "text",
      "id": "image_1_alt",
      "label": "Image 1 Alt Text",
      "default": "Iron Colorway"
    },
    {
      "type": "text",
      "id": "color_name_1",
      "label": "Color Name 1",
      "default": "Iron"
    },
    {
      "type": "text",
      "id": "color_size_1",
      "label": "Color Size 1",
      "default": "Standard 2'6\" 4'"
    },
    {
      "type": "text",
      "id": "color_note_1",
      "label": "Color Note 1",
      "default": "*Color shown: Iron. Coming soon!"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    },
    {
      "type": "text",
      "id": "image_2_alt",
      "label": "Image 2 Alt Text",
      "default": "Truffle Colorway"
    },
    {
      "type": "text",
      "id": "color_name_2",
      "label": "Color Name 2",
      "default": "Truffle"
    },
    {
      "type": "text",
      "id": "color_size_2",
      "label": "Color Size 2",
      "default": "Double 3' 6'"
    },
    {
      "type": "text",
      "id": "color_note_2",
      "label": "Color Note 2"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Image 3"
    },
    {
      "type": "text",
      "id": "image_3_alt",
      "label": "Image 3 Alt Text",
      "default": "Greystone Colorway"
    },
    {
      "type": "text",
      "id": "color_name_3",
      "label": "Color Name 3",
      "default": "Greystone"
    },
    {
      "type": "text",
      "id": "color_size_3",
      "label": "Color Size 3",
      "default": "Double 3' 6'"
    },
    {
      "type": "text",
      "id": "color_note_3",
      "label": "Color Note 3"
    },
    {
      "type": "text",
