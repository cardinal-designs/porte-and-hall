.malomo-banner .page-width {
  width: 100%;
}

.malomo-banner-align--center {
  justify-content: center;
  text-align: center;
}

.malomo-banner-col .shopify-app-block {
  justify-content: unset !important;
}

.malomo-banner-align--left {
  justify-content: flex-start;
  text-align: left;
}

.malomo-banner-align--right {
  justify-content: flex-end;
  text-align: right;
}

.malomo-banner-col {
  align-items: center;
  display: flex;
  flex: 1;
  justify-content: center;
}

.malomo-banner-row {
  display: flex;
}

.malomo-banner .malomo-order-lookup label {
  font-size: 18px;
  line-height: 1.3em;
  color: var(--blue);
  font-family: brandon;
  font-weight: 400 !important;
}

.malomo-banner .malomo-order-lookup .malomo-order-lookup-error-message {
  margin-bottom: 20px !important;
}

.malomo-banner .malomo-order-lookup .malomo-order-lookup-body .malomo-order-lookup-form input:focus-visible {
  outline: 0;
}

.malomo-banner .malomo-order-lookup .malomo-order-lookup-body .malomo-order-lookup-form .malomo-order-lookup-section-1 .malomo-order-lookup-section-1-1 {
  margin-bottom: 20px !important;
}

.malomo-banner .malomo-order-lookup .malomo-order-lookup-body .malomo-order-lookup-form .malomo-order-lookup-section-separator {
  font-size: 20px !important;
  margin: 5px 0 !important;
}

.malomo-banner .malomo-order-lookup .malomo-order-lookup-body .malomo-order-lookup-form .malomo-order-lookup-submit-button {
  margin-top: 20px !important;
  text-transform: uppercase !important;
  font-weight: 600 ! important;
  letter-spacing: 2px !important;
  font-family: brandon !important;
}

@media only screen and (min-width : 320px) and (max-width : 480px) {
  
  .malomo-banner-col {
    flex-basis: auto;
    width: 100%;
  }

  .malomo-banner-col-img,
  .malomo-banner-img {
    display: none;
  }
  
}