.malomo-banner .page-width {
  width: 100%;
}

.malomo-banner-align--center {
  justify-content: center;
  text-align: center;
}

.malomo-banner-col .shopify-app-block {
  justify-content: unset !important;
}

.malomo-banner-align--left {
  justify-content: flex-start;
  text-align: left;
}

.malomo-banner-align--right {
  justify-content: flex-end;
  text-align: right;
}

.malomo-banner-col {
  align-items: center;
  display: flex;
  flex: 1;
  justify-content: center;
}

.malomo-banner-row {
  display: flex;
}

@media only screen and (min-width : 320px) and (max-width : 480px) {
  
  .malomo-banner-col {
    flex-basis: auto;
    width: 100%;
  }

  .malomo-banner-col-img,
  .malomo-banner-img {
    display: none;
  }
  
}