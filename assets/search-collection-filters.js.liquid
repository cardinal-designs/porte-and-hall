function adjustActiveFilters() {
  var currentUrl = window.location.href;
  var url = new URL(currentUrl);
  var params = new URLSearchParams(url.search);

  var filterValues = {};
  params.forEach(function(value, key) {
    if (key !== 'sort_by' && key !== 'q') {
      if (!filterValues[key]) {
        filterValues[key] = [];
      }
      filterValues[key].push(value);
    }
  });

  let activeFilters = document.querySelector('.collection-filters__active-filters');
  if(activeFilters){
    activeFilters.innerHtml = '';
  }
  for (var key in filterValues) {
    if (filterValues.hasOwnProperty(key)) {
      let shortKey = key;
      if(key?.includes('filter.v.m.custom.filters.')){
        shortKey = key?.replace('filter.v.m.custom.filters.', '');
        shortKey = 'Collection';
      }
      if(key?.includes('filter.v.m.custom.')){
        shortKey = key?.replace('filter.v.m.custom.', '');
      }
      if(key?.includes('filter.v.m.filters.')){
        shortKey = key?.replace('filter.v.m.filters.', '');
      }
      if(shortKey?.trim() == 'filters'){
        shortKey = 'Collection';
      }
      filterValues[key].forEach(function(value) {
        if(key != 'page' && value){
          let activeInput = document.querySelectorAll(`.collection-filters__filter-button[value="${value}"]`);
          if(activeInput[0]){
            activeInput[0].checked = true;
          }
  
          let buttonHtml = `<button
                              class="remove-filter active-filter body-xs body-bold"
                              data-url="/search"
                              data-filter="${key}-${value}"
                            >
                              ${shortKey}:${value}
                              <svg width="11" height="11" viewBox="0 0 11 11" fill="none" class="icon icon-close">
                                <path fill-rule="evenodd" clip-rule="evenodd" d="M5.5 4.65393L10.1539 0L11 0.846074L6.34607 5.5L11 10.1539L10.1539 11L5.5 6.34607L0.846074 11L0 10.1539L4.65393 5.5L0 0.846074L0.846074 0L5.5 4.65393Z" fill="currentColor"/>
                              </svg>
                            </button>`;
  
          if(activeFilters){
            activeFilters.insertAdjacentHTML('beforeend', buttonHtml);
          }
        }
      });
    }
  }
  if (Object.keys(filterValues)?.length > 0) {
    let buttonHtml = `<button class="text-link js-clear-all-filters js-clear-all-filters--close blue">Clear All</button>`;
    if(activeFilters){
      activeFilters.insertAdjacentHTML('beforeend', buttonHtml);
    }
  }
  
}

